<?php

namespace App\Controller;

use App\Service\ClaudeService;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpFoundation\JsonResponse;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\Response;
use Symfony\Component\Routing\Annotation\Route;
use Symfony\Component\Security\Http\Attribute\IsGranted;

#[Route('/api/ai', name: 'api_ai_')]
class AISuggestionsController extends AbstractController
{
    public function __construct(
        private ClaudeService $claudeService
    ) {}

    /**
     * TEST PUBLIC - Générer des suggestions SANS authentification
     */
    #[Route('/suggestions/demo', name: 'suggestions_demo', methods: ['POST', 'GET'])]
    public function demoSuggestions(Request $request): JsonResponse
    {
        try {
            // Context par défaut pour le test
            $context = [
                'userProfile' => 'développeur web freelance spécialisé Symfony et React',
                'userProjects' => ['plateforme e-commerce', 'blog personnel', 'API REST'],
                'limit' => 3
            ];

            // Si POST avec body, utiliser les données fournies
            if ($request->getMethod() === 'POST' && $request->getContent()) {
                $data = json_decode($request->getContent(), true);
                if ($data) {
                    $context = array_merge($context, $data);
                }
            }

            // Appeler Claude
            $result = $this->claudeService->generateSuggestions($context);

            return $this->json([
                'success' => true,
                'suggestions' => $result['suggestions'] ?? [],
                'count' => count($result['suggestions'] ?? []),
                'context' => $context,
                'timestamp' => (new \DateTimeImmutable())->format('Y-m-d H:i:s')
            ]);

        } catch (\Exception $e) {
            return $this->json([
                'success' => false,
                'error' => 'Erreur lors de la génération des suggestions',
                'details' => $e->getMessage(),
                'trace' => $e->getTraceAsString()
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Générer des suggestions de projets/tâches (PROTÉGÉ)
     */
    #[Route('/suggestions', name: 'suggestions', methods: ['POST'])]
    #[IsGranted('ROLE_USER')]
    public function generateSuggestions(Request $request): JsonResponse
    {
        try {
            $user = $this->getUser();
            
            if (!$user) {
                return $this->json([
                    'success' => false,
                    'error' => 'Utilisateur non authentifié'
                ], Response::HTTP_UNAUTHORIZED);
            }

            $data = json_decode($request->getContent(), true);

            // Construire le contexte
            $context = [
                'userProfile' => $data['userProfile'] ?? $user->getEmail(),
                'userProjects' => $data['userProjects'] ?? [],
                'limit' => min((int)($data['limit'] ?? 5), 10) // Max 10 suggestions
            ];

            // Appeler Claude
            $result = $this->claudeService->generateSuggestions($context);

            return $this->json([
                'success' => true,
                'suggestions' => $result['suggestions'] ?? [],
                'count' => count($result['suggestions'] ?? []),
                'timestamp' => (new \DateTimeImmutable())->format('Y-m-d H:i:s')
            ]);

        } catch (\Exception $e) {
            return $this->json([
                'success' => false,
                'error' => 'Erreur lors de la génération des suggestions',
                'details' => $e->getMessage()
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Analyser le sentiment d'un texte
     */
    #[Route('/sentiment', name: 'sentiment', methods: ['POST'])]
    #[IsGranted('ROLE_USER')]
    public function analyzeSentiment(Request $request): JsonResponse
    {
        try {
            $data = json_decode($request->getContent(), true);

            if (!isset($data['text']) || empty(trim($data['text']))) {
                return $this->json([
                    'success' => false,
                    'error' => 'Le champ "text" est requis'
                ], Response::HTTP_BAD_REQUEST);
            }

            $result = $this->claudeService->analyzeSentiment($data['text']);

            return $this->json([
                'success' => true,
                'analysis' => $result,
                'timestamp' => (new \DateTimeImmutable())->format('Y-m-d H:i:s')
            ]);

        } catch (\Exception $e) {
            return $this->json([
                'success' => false,
                'error' => 'Erreur lors de l\'analyse de sentiment',
                'details' => $e->getMessage()
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Health check de l'API Claude
     */
    #[Route('/health', name: 'health', methods: ['GET'])]
    public function healthCheck(): JsonResponse
    {
        try {
            $isHealthy = $this->claudeService->healthCheck();

            return $this->json([
                'success' => $isHealthy,
                'service' => 'Claude AI (Anthropic)',
                'status' => $isHealthy ? 'operational' : 'unavailable',
                'timestamp' => (new \DateTimeImmutable())->format('Y-m-d H:i:s')
            ], $isHealthy ? Response::HTTP_OK : Response::HTTP_SERVICE_UNAVAILABLE);

        } catch (\Exception $e) {
            return $this->json([
                'success' => false,
                'service' => 'Claude AI',
                'status' => 'error',
                'error' => $e->getMessage()
            ], Response::HTTP_INTERNAL_SERVER_ERROR);
        }
    }

    /**
     * Test route (sans authentification pour debug)
     */
    #[Route('/test', name: 'test', methods: ['GET'])]
    public function test(): JsonResponse
    {
        return $this->json([
            'success' => true,
            'message' => 'AI Suggestions API opérationnelle',
            'session' => 38,
            'features' => [
                'suggestions' => 'POST /api/ai/suggestions (AUTH)',
                'suggestions_demo' => 'GET/POST /api/ai/suggestions/demo (PUBLIC)',
                'sentiment' => 'POST /api/ai/sentiment (AUTH)',
                'health' => 'GET /api/ai/health (PUBLIC)'
            ],
            'timestamp' => (new \DateTimeImmutable())->format('Y-m-d H:i:s')
        ]);
    }
}
