    function forceBtn(b) {
        console.log('Ã°Å¸Å½Â¯ ForÃƒÂ§age:', b.textContent.trim());
        b.style.setProperty('background', 'linear-gradient(135deg, #a855f7, #ec4899)', 'important');
        b.style.setProperty('color', '#fff', 'important');
        b.style.setProperty('border', '2px solid #a855f7', 'important');
