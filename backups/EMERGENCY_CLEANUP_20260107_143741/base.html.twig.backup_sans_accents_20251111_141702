        b.style.setProperty('cursor', 'pointer', 'important');
        b.style.setProperty('box-shadow', '0 4px 6px rgba(168,85,247,0.3)', 'important');
        if (b.closest('form')) {
            b.style.setProperty('width', '100%', 'important');
            b.style.setProperty('font-size', '1.1rem', 'important');
        }
    }
    
    function forceAll() {
        console.log('Ã°Å¸â€Â Recherche boutons...');
        var btns = document.querySelectorAll('button, input[type="submit"], .btn');
        console.log('Ã¢Å“â€¦ TrouvÃƒÂ©s:', btns.length);
        btns.forEach(function(b, i) {
            console.log('  Bouton ' + (i+1) + ':', b.textContent.trim());
            forceBtn(b);
        });
        console.log('Ã°Å¸Å½â€° TerminÃƒÂ© !');
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', forceAll);
    } else {
        forceAll();
    }
    setTimeout(forceAll, 500);
    setTimeout(forceAll, 1000);
    
    console.log('========================================');
})();
