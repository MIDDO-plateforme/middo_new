{% extends 'base.html.twig' %}

{% block title %}Modifier le projet - MIDDO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
            color: #333;
        }
        .form-control, .form-select {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
        }
        .form-control:focus {
            outline: none;
            border-color: #f4a261;
            box-shadow: 0 0 0 3px rgba(244, 162, 97, 0.1);
        }
        .btn-submit {
            background: linear-gradient(135deg, #f4a261 0%, #e76f51 100%);
            color: white;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.3s;
        }
        .btn-submit:hover {
            transform: scale(1.05);
        }
        .btn-cancel {
            background: #e9ecef;
            color: #495057;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            margin-right: 1rem;
            text-decoration: none;
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="form-container">
        <h1> Modifier le projet</h1>
        <p class="text-muted mb-4">Créez un Modifier le projet et invitez votre équipe</p>

        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status) }}
                    {{ form_errors(form.status) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.budget) }}
                    {{ form_widget(form.budget) }}
                    {{ form_errors(form.budget) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.startDate) }}
                    {{ form_widget(form.startDate) }}
                    {{ form_errors(form.startDate) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.endDate) }}
                    {{ form_widget(form.endDate) }}
                    {{ form_errors(form.endDate) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.members) }}
            {{ form_widget(form.members) }}
            {{ form_errors(form.members) }}
            <small class="text-muted">Sélectionnez les membres de votre équipe</small>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_project_index') }}" class="btn-cancel">Annuler</a>
            <button type="submit" class="btn-submit">Enregistrer les modifications</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}