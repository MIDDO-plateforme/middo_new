        }

        .header-top {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-create-project {
            width: 100%;
            justify-content: center;
        }

        .projects-grid {
            grid-template-columns: 1fr;
        }

        .modal-content {
            width: 95%;
            margin: 1rem;
        }
    }
</style>

