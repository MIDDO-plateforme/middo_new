{% extends 'base.html.twig' %}

{% block title %}Analyse Sentiment - {{ project.title }} - MIDDO{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 py-12">
    <div class="container mx-auto px-4 max-w-4xl">
        
        <!-- En-tête -->
        <div class="mb-8">
            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
                ← Retour au projet
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Analyse de Sentiment</h1>
            <p class="text-gray-600 mt-2">{{ project.title }}</p>
        </div>

        <!-- Bouton d'analyse -->
        <div class="mb-8 text-center">
            <button id="analyze-btn" class="px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:shadow-xl transition-all duration-300 font-semibold text-lg">
                🔍 Analyser le sentiment du projet
            </button>
        </div>

                <!-- Zone résultat -->
        <div id="result-container" class="bg-white rounded-xl shadow-lg p-8" style="display: none;">
            <h2 class="text-2xl font-bold text-center mb-8">Résultat de l'Analyse</h2>
            
            <!-- Jauge SVG semi-circulaire -->
            <div class="flex justify-center mb-8">
                <div class="relative" style="width: 240px; height: 140px;">
                    <!-- SVG Jauge -->
                    <svg viewBox="0 0 200 120" class="w-full h-full">
                        <!-- Fond gris -->
                        <path d="M 20 100 A 80 80 0 0 1 180 100" 
                              fill="none" 
                              stroke="#e5e7eb" 
                              stroke-width="20" 
                              stroke-linecap="round"/>
                        
                        <!-- Barre de progression animée -->
                        <path id="sentiment-gauge-bar" 
                              d="M 20 100 A 80 80 0 0 1 180 100" 
                              fill="none" 
                              stroke="#10b981" 
                              stroke-width="20" 
                              stroke-linecap="round"
                              stroke-dasharray="251.2"
                              stroke-dashoffset="251.2"
                              style="transition: stroke-dashoffset 2s ease-out, stroke 0.5s ease;"/>
                    </svg>
                    
                    <!-- Score et label -->
                    <div class="absolute bottom-0 left-0 right-0 text-center" style="transform: translateY(50px);">
                        <div id="score-display" class="text-5xl font-bold text-gray-900 mb-1">--</div>
                        <div id="label-display" class="text-xl font-semibold text-gray-600">En attente...</div>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const analyzeBtn = document.getElementById('analyze-btn');
    const resultContainer = document.getElementById('result-container');
    const scoreDisplay = document.getElementById('score-display');
    const labelDisplay = document.getElementById('label-display');

    analyzeBtn.addEventListener('click', async () => {
        console.log('🔍 Début analyse...');
        
        // Désactiver le bouton
        analyzeBtn.disabled = true;
        analyzeBtn.textContent = '⏳ Analyse en cours...';
        
        try {
            // Appel API
            const response = await fetch('/api/ai/analyze-sentiment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    projectDescription: '{{ project.description|escape('js') }}'
                })
            });

            const data = await response.json();
            console.log('✅ Résultat:', data);
            // Animer la jauge
            const gaugeBar = document.getElementById('sentiment-gauge-bar');
            const percentage = data.score / 100;
            const offset = 251.2 * (1 - percentage);
            
            setTimeout(() => {
                gaugeBar.style.strokeDashoffset = offset;
                
                // Couleur selon le score
                if (data.score >= 70) {
                    gaugeBar.style.stroke = '#10b981'; // Vert
                } else if (data.score >= 40) {
                    gaugeBar.style.stroke = '#f59e0b'; // Orange
                } else {
                    gaugeBar.style.stroke = '#ef4444'; // Rouge
                }
            }, 100);


            // Afficher résultat
            resultContainer.style.display = 'block';
            scoreDisplay.textContent = data.score + '%';
            labelDisplay.textContent = data.label;
            
            // Appliquer couleur selon score
            if (data.score >= 70) {
                scoreDisplay.className = 'text-6xl font-bold text-green-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-green-700';
            } else if (data.score >= 40) {
                scoreDisplay.className = 'text-6xl font-bold text-yellow-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-yellow-700';
            } else {
                scoreDisplay.className = 'text-6xl font-bold text-red-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-red-700';
            }

            // Toast de succès (si disponible)
            if (window.toast) {
                window.toast.show(`✅ Analyse terminée : ${data.score}% ${data.label}`, 'success', 5000);
            }
            
        } catch (error) {
            console.error('❌ Erreur:', error);
            alert('Erreur lors de l\'analyse. Veuillez réessayer.');
            
            // Toast d'erreur (si disponible)
            if (window.toast) {
                window.toast.show('❌ Erreur lors de l\'analyse', 'error', 5000);
            }
        } finally {
            // Réactiver le bouton
            analyzeBtn.disabled = false;
            analyzeBtn.textContent = '🔍 Analyser le sentiment du projet';
        }
    });
});
</script>

{% endblock %}