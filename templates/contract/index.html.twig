{% extends 'base.html.twig' %}

{% block body %}
<h1>Contracts</h1>

<a href="{{ path('contract_create') }}" class="btn btn-primary">Create Contract</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.title }}</td>
                <td>{{ contract.amount }} â‚¬</td>
                <td>{{ contract.status }}</td>
                <td>{{ contract.createdAt|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('contract_show', {id: contract.id}) }}" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
