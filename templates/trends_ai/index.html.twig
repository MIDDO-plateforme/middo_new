{% extends 'base.html.twig' %}

{% block body %}
<h1>IA Tendances — Analyse des ventes</h1>

<div class="mdo-card">
    <h3>Résumé</h3>
    <p>Statut global : <strong>{{ status }}</strong></p>
</div>

<div class="mdo-card">
    <h3>Ventes par mois</h3>
    <table class="mdo-table">
        <tr>
            <th>Mois</th>
            <th>Total</th>
        </tr>
        {% for month, total in byMonth %}
            <tr>
                <td>{{ month }}</td>
                <td>{{ total }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
