{% extends 'base.html.twig' %}

{% block body %}
<h1>Transactions du Centre d’Achat</h1>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Montant</th>
            <th>Commande</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for t in transactions %}
            <tr>
                <td>{{ t.date|date('d/m/Y H:i') }}</td>
                <td>{{ t.type }}</td>
                <td>{{ t.amount }} €</td>
                <td>
                    {% if t.order %}
                        <a href="{{ path('purchase_order_show', {id: t.order.id}) }}">
                            Commande #{{ t.order.id }}
                        </a>
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('purchase_transaction_show', {id: t.id}) }}" class="btn btn-sm btn-info">Voir</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('purchase_center_index') }}" class="btn btn-secondary mt-3">Retour</a>
{% endblock %}
