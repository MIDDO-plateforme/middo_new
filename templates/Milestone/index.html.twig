{% extends 'base.html.twig' %}

{% block body %}
<h1>Milestones for Contract: {{ contract.title }}</h1>

<a href="{{ path('milestone_create', {id: contract.id}) }}" class="btn btn-primary">Add Milestone</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for m in milestones %}
            <tr>
                <td>{{ m.title }}</td>
                <td>{{ m.amount }} â‚¬</td>
                <td>{{ m.status }}</td>
                <td>{{ m.createdAt|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('milestone_show', {id: m.id}) }}" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('contract_show', {id: contract.id}) }}" class="btn btn-secondary mt-3">Back to Contract</a>
{% endblock %}
