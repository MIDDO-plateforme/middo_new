{% extends 'layout/app_layout.html.twig' %}

{% block title %}D√©poser des fonds - Banque MIDDO{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .deposit-container {
        max-width: 700px;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    .deposit-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        animation: fadeInUp 0.5s ease-out;
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .page-header .subtitle {
        color: #666;
        font-size: 1rem;
    }

    .security-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        background: #f0f9ff;
        border: 2px solid #bfdbfe;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 2rem;
        color: #1e40af;
    }

    .security-badge i {
        font-size: 1.5rem;
    }

    .quick-amounts {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .quick-amount-btn {
        background: white;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .quick-amount-btn:hover {
        border-color: #10b981;
        color: #10b981;
        transform: translateY(-2px);
    }

    .quick-amount-btn.active {
        background: #10b981;
        border-color: #10b981;
        color: white;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control-lg {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 1rem 1.5rem;
        font-size: 1.5rem;
        text-align: center;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .form-control-lg:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        outline: none;
    }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        border-radius: 10px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
    }

    .info-box {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        border-radius: 10px;
        padding: 1rem 1.5rem;
        margin-top: 2rem;
    }

    .info-box h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #92400e;
        margin-bottom: 0.5rem;
    }

    .info-box ul {
        margin: 0;
        padding-left: 1.5rem;
        color: #78350f;
    }

    .info-box li {
        margin-bottom: 0.25rem;
    }

    .stripe-logo {
        text-align: center;
        margin-top: 2rem;
        opacity: 0.5;
    }

    .stripe-logo img {
        height: 30px;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .deposit-container {
            margin: 1rem auto;
        }

        .deposit-card {
            padding: 1.5rem;
        }

        .quick-amounts {
            grid-template-columns: repeat(2, 1fr);
        }

        .form-control-lg {
            font-size: 1.2rem;
        }
    }
</style>
{% endblock %}

