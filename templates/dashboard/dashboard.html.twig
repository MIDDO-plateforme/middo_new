    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

.session-badge-main {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255,255,255,0.2);
    padding: 0.5rem 1rem;
    border-radius: 24px;
    font-weight: 600;
    font-size: 0.875rem;
    backdrop-filter: blur(10px);
    margin-bottom: 1rem;
}

.session-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0.5rem 0;
}

.session-description {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0;
    line-height: 1.5;
}

.session-status {
    text-align: right;
}

.status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255,255,255,0.2);
    padding: 0.5rem 1rem;
    border-radius: 24px;
    font-weight: 600;
    font-size: 0.875rem;
    backdrop-filter: blur(10px);
    margin-bottom: 0.5rem;
}

.status-badge.status-active {
    background: #10b981;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: blink 1.5s infinite;
}

@keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
}

.session-date {
    font-size: 0.875rem;
    opacity: 0.9;
}

/* Navigation timeline */
.timeline-navigation {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.timeline-nav-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid #e5e7eb;
    background: white;
    color: #6b7280;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.timeline-nav-btn:hover {
    border-color: #6366f1;
    color: #6366f1;
    transform: scale(1.1);
}

/* Conteneur des dots avec scroll horizontal */
.timeline-dots-container {
    flex: 1;
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: thin;
    scrollbar-color: #cbd5e0 #f7fafc;
}

.timeline-dots-container::-webkit-scrollbar {
    height: 8px;
}

.timeline-dots-container::-webkit-scrollbar-track {
    background: #f7fafc;
    border-radius: 10px;
}

.timeline-dots-container::-webkit-scrollbar-thumb {
    background: #cbd5e0;
    border-radius: 10px;
}

.timeline-dots {
    display: flex;
    gap: 0.75rem;
    padding: 1rem 0;
    min-width: min-content;
}

/* Dots individuels */
.session-dot {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    flex-shrink: 0;
}

.session-dot:hover {
    transform: scale(1.2);
    z-index: 10;
}

.dot-number {
    position: relative;
    z-index: 2;
}

/* √âtats des sessions */
.session-dot.completed {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
}

.session-dot.in-progress {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
    animation: pulse 2s infinite;
}

.session-dot.active {
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    color: white;
    box-shadow: 0 6px 16px rgba(99, 102, 241, 0.6);
    transform: scale(1.15);
    border: 3px solid white;
    animation: pulse 2s infinite;
}

.session-dot.upcoming {
    background: linear-gradient(135deg, #e5e7eb, #d1d5db);
    color: #6b7280;
    border: 2px solid #9ca3af;
}

.session-dot.planned {
    background: white;
    color: #9ca3af;
    border: 2px dashed #cbd5e0;
}

@keyframes pulse {
    0%, 100% { transform: scale(1.15); }
    50% { transform: scale(1.25); }
}

/* L√©gende */
.timeline-legend {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding-top: 1.5rem;
    border-top: 2px solid #e5e7eb;
