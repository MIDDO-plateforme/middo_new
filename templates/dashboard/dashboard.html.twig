<style>
    /* ===================================
       VARIABLES & BASE STYLES
    =================================== */
    :root {
        --primary: #6366f1;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
        --dark: #1f2937;
        --light: #f9fafb;
        --border: #e5e7eb;
    }

    .dashboard-container {
        padding: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    /* ===================================
       HEADER SECTION
    =================================== */
    .dashboard-header {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .dashboard-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0 0 0.5rem 0;
    }

    .session-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, var(--primary), var(--info));
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 24px;
        font-weight: 600;
        font-size: 0.875rem;
        animation: pulse 2s infinite;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--success);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 24px;
        font-weight: 600;
        font-size: 0.875rem;
        margin-left: 1rem;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        animation: blink 1.5s infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.3; }
    }

    /* ===================================
       KPI CARDS
    =================================== */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .kpi-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .kpi-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }

    .kpi-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--card-color), transparent);
    }

    .kpi-card.users { --card-color: var(--info); }
    .kpi-card.notifications { --card-color: var(--warning); }
    .kpi-card.tasks { --card-color: var(--success); }
    .kpi-card.engagement { --card-color: var(--primary); }

    .kpi-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .kpi-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        background: linear-gradient(135deg, var(--card-color), transparent);
        color: white;
    }

    .kpi-title {
        font-size: 0.875rem;
        color: #6b7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .kpi-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--dark);
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .kpi-subtitle {
        font-size: 0.875rem;
        color: #9ca3af;
        margin-bottom: 1rem;
    }

    .kpi-trend {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .kpi-trend.positive {
        color: var(--success);
    }

    .kpi-trend.negative {
        color: var(--danger);
    }

    .sparkline {
        width: 100%;
        height: 40px;
        margin-top: 1rem;
        background: linear-gradient(to right, rgba(99, 102, 241, 0.1), rgba(99, 102, 241, 0.3));
        border-radius: 8px;
        position: relative;
        overflow: hidden;
    }

    .sparkline::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60%;
        background: linear-gradient(to right, 
            transparent 0%, var(--card-color) 25%, 
            var(--card-color) 50%, transparent 75%, 
            var(--card-color) 100%);
        opacity: 0.3;
        clip-path: polygon(
            0% 100%, 10% 80%, 20% 85%, 30% 60%, 
            40% 70%, 50% 40%, 60% 55%, 70% 30%, 
            80% 45%, 90% 20%, 100% 35%, 100% 100%
        );
    }

