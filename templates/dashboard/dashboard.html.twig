<script>
// Navigation entre sessions
function navigateSession(direction) {
    const currentSession = parseInt(document.getElementById('currentSessionNumber').textContent);
    const newSession = Math.max(1, Math.min(60, currentSession + direction));
    
    if (newSession !== currentSession) {
        loadSession(newSession);
    }
}

// Charger une session sp√©cifique
function loadSession(sessionNumber) {
    // Mise √† jour du num√©ro de session
    document.getElementById('currentSessionNumber').textContent = sessionNumber;
    
    // Donn√©es fictives pour d√©monstration (√† remplacer par vraies donn√©es)
    const sessionData = {
        title: `Session ${sessionNumber}`,
        description: `Description de la session ${sessionNumber}`,
        date: new Date().toLocaleDateString('fr-FR', { day: 'numeric', month: 'short', year: 'numeric' })
    };
    
    document.getElementById('currentSessionTitle').textContent = sessionData.title;
    document.getElementById('currentSessionDescription').textContent = sessionData.description;
    document.getElementById('currentSessionDate').textContent = sessionData.date;
    
    // Mise √† jour de la classe active
    document.querySelectorAll('.session-dot').forEach(dot => {
        dot.classList.remove('active');
        if (parseInt(dot.getAttribute('data-session')) === sessionNumber) {
            dot.classList.add('active');
            dot.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
        }
    });
}

// Clic sur un dot
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.session-dot').forEach(dot => {
        dot.addEventListener('click', function() {
            const sessionNumber = parseInt(this.getAttribute('data-session'));
            loadSession(sessionNumber);
        });
    });
    
    // Navigation clavier
    document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowLeft') {
            navigateSession(-1);
        } else if (e.key === 'ArrowRight') {
            navigateSession(1);
        }
    });
});
</script>

