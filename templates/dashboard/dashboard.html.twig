    }

    /* ===================================
       RESPONSIVE
    =================================== */
    @media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem;
        }

        .charts-grid {
            grid-template-columns: 1fr;
        }

        .kpi-grid {
            grid-template-columns: 1fr;
        }

        .dashboard-header h1 {
            font-size: 1.5rem;
        }

        .kpi-value {
            font-size: 2rem;
        }
    }
</style>

