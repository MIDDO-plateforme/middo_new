<table class="table mt-4">
    <thead>
        <tr>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {% for t in tracking %}
            <tr>
                <td>{{ t.status }}</td>
                <td>{{ t.timestamp|date('d/m/Y H:i') }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

