{% extends 'base.html.twig' %}

{% block title %}{{ user.email }} - Profil MIDDO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* ============================== */
        /* PALETTE MIDDO ANNUAIRE         */
        /* ============================== */
        :root {
            --primary-violet: #8B5CF6;
            --primary-violet-dark: #7C3AED;
            --gradient-purple: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --text-dark: #1F2937;
            --text-gray: #6B7280;
            --bg-light: #F9FAFB;
            --border-light: #E5E7EB;
        }

        /* ============================== */
        /* HEADER PROFIL                  */
        /* ============================== */
        .profile-header {
            background: var(--gradient-purple);
            padding: 3rem 0 6rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .profile-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .profile-card {
            position: relative;
            z-index: 10;
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-top: -4rem;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: var(--gradient-purple);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            font-weight: 700;
            margin: -5rem auto 1.5rem;
            border: 6px solid white;
            box-shadow: 0 10px 40px rgba(139, 92, 246, 0.3);
        }

        .profile-name {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .profile-type {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(139, 92, 246, 0.1);
            color: var(--primary-violet);
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* ============================== */
        /* SECTION BIO                    */
        /* ============================== */
        .bio-section {
            background: var(--bg-light);
            padding: 2rem;
            border-radius: 15px;
            margin: 2rem 0;
        }

        .bio-section h3 {
            color: var(--text-dark);
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .bio-section p {
            color: var(--text-gray);
            line-height: 1.8;
            font-size: 1rem;
        }

        /* ============================== */
        /* COMPÉTENCES (SKILLS)           */
        /* ============================== */
        .skills-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1rem;
        }

        .skill-tag {
            padding: 0.5rem 1rem;
            background: white;
            border: 2px solid var(--primary-violet);
            color: var(--primary-violet);
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .skill-tag:hover {
            background: var(--primary-violet);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(139, 92, 246, 0.3);
        }

        /* ============================== */
        /* INFORMATIONS COMPAGNIE         */
        /* ============================== */
        .company-card {
            background: white;
            border: 2px solid var(--border-light);
            border-radius: 15px;
            padding: 1.5rem;
            margin: 2rem 0;
            transition: all 0.3s ease;
        }

        .company-card:hover {
            border-color: var(--primary-violet);
            box-shadow: 0 10px 30px rgba(139, 92, 246, 0.1);
        }

        .company-name {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .company-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-gray);
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        /* ============================== */
        /* PROFILS SIMILAIRES             */
        /* ============================== */
        .similar-profiles {
            margin-top: 3rem;
        }

        .similar-profiles h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1.5rem;
        }

        .similar-card {
            background: white;
            border: 2px solid var(--border-light);
            border-radius: 15px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: block;
            margin-bottom: 1rem;
        }

        .similar-card:hover {
            border-color: var(--primary-violet);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(139, 92, 246, 0.2);
            text-decoration: none;
        }

        .similar-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--gradient-purple);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .similar-name {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.25rem;
        }

        .similar-skills {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 0.75rem;
        }

        .similar-skills .skill-tag {
            font-size: 0.75rem;
            padding: 0.25rem 0.75rem;
        }

        /* ============================== */
        /* ACTIONS PROFIL                 */
        /* ============================== */
        .profile-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--gradient-purple);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
        }

        .btn-outline {
            background: white;
            color: var(--primary-violet);
            border: 2px solid var(--primary-violet);
        }

        .btn-outline:hover {
            background: var(--primary-violet);
            color: white;
            transform: translateY(-2px);
        }

        /* ============================== */
        /* RESPONSIVE                     */
        /* ============================== */
        @media (max-width: 768px) {
            .profile-header {
                padding: 2rem 0 4rem;
            }

            .profile-card {
                padding: 1.5rem;
                margin-top: -3rem;
            }

            .profile-avatar {
                width: 100px;
                height: 100px;
                font-size: 2.5rem;
                margin-top: -4rem;
            }

            .profile-name {
                font-size: 1.5rem;
            }

            .profile-actions {
                flex-direction: column;
            }

            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }

        /* ============================== */
        /* BADGE VÉRIFICATION             */
        /* ============================== */
        .verified-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(34, 197, 94, 0.1);
            color: #16A34A;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-left: 1rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--text-gray);
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            opacity: 0.3;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- HEADER PROFIL -->
    <div class="profile-header">
        <div class="container">
            <div class="text-center">
                <h1 style="font-size: 2.5rem; font-weight: 800; margin: 0;">Profil Professionnel</h1>
                <p style="font-size: 1.125rem; opacity: 0.9; margin-top: 0.5rem;">Découvrez le parcours et les compétences</p>
            </div>
        </div>
    </div>

    <!-- CARTE PROFIL PRINCIPALE -->
    <div class="container">
        <div class="profile-card">
            <!-- Avatar -->
            <div class="profile-avatar">
                {{ user.email|slice(0, 1)|upper }}
            </div>

            <!-- Nom et Type -->
            <div class="text-center">
                <h1 class="profile-name">{{ user.email }}</h1>
                
                {% if user.userType is defined and user.userType %}
                    <span class="profile-type">{{ user.userType }}</span>
                {% elseif user.user_type is defined and user.user_type %}
                    <span class="profile-type">{{ user.user_type }}</span>
                {% else %}
                    <span class="profile-type">Professionnel</span>
                {% endif %}

                {% if user.isVerified is defined and user.isVerified %}
                    <span class="verified-badge">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                        Vérifié
                    </span>
                {% endif %}
            </div>

            <!-- Bio -->
            {% if user.bio is defined and user.bio %}
                <div class="bio-section">
                    <h3>À propos</h3>
                    <p>{{ user.bio|nl2br }}</p>
                </div>
            {% endif %}

            <!-- Compétences -->
            {% if skills is defined and skills is not empty %}
                <div class="bio-section">
                    <h3>Compétences</h3>
                    <div class="skills-container">
                        {% for skill in skills %}
                            <span class="skill-tag">{{ skill }}</span>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="empty-state">
                    <p>Aucune compétence renseignée</p>
                </div>
            {% endif %}

            <!-- Informations Compagnie -->
            {% if company is defined and company %}
                <div class="company-card">
                    <div class="company-name">
                        {% if company.name is defined %}
                            {{ company.name }}
                        {% else %}
                            Entreprise
                        {% endif %}
                    </div>
                    {% if company.industry is defined and company.industry %}
                        <div class="company-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                            {{ company.industry }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="profile-actions">
                <a href="#" class="btn-action btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                    Contacter
                </a>
                <a href="{{ path('app_directory_search') }}" class="btn-action btn-outline">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                    Retour à la recherche
                </a>
            </div>
        </div>

        <!-- Profils Similaires -->
        {% if similarProfiles is defined and similarProfiles is not empty %}
            <div class="similar-profiles">
                <h3>Profils Similaires</h3>
                <div class="row">
                    {% for profile in similarProfiles %}
                        <div class="col-md-4">
                            <a href="{{ path('app_directory_profile', {id: profile.id}) }}" class="similar-card">
                                <div class="similar-avatar">
                                    {{ profile.email|slice(0, 1)|upper }}
                                </div>
                                <div class="similar-name">{{ profile.email }}</div>
                                {% if profile.skills is defined and profile.skills is not empty %}
                                    <div class="similar-skills">
                                        {% for skill in profile.skills|slice(0, 3) %}
                                            <span class="skill-tag">{{ skill }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>

    <div style="height: 4rem;"></div>
{% endblock %}
