{% extends 'base.html.twig' %}

{% block body %}
<h1>Mes messages</h1>

<div class="mdo-card">
    {% for msg in messages %}
        <div style="margin-bottom:1rem;">
            <a href="{{ path('messages_conversation', {id: msg.sender.id}) }}">
                <strong>{{ msg.sender.name }}</strong>
            </a><br>
            {{ msg.content|slice(0, 60) }}â€¦<br>
            <small>{{ msg.createdAt|date('d/m/Y H:i') }}</small>
        </div>
    {% else %}
        <p>Aucun message.</p>
    {% endfor %}
</div>
{% endblock %}
