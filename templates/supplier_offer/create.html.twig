{% extends 'base.html.twig' %}

{% block body %}
<h1>Proposer une offre pour le groupe : {{ group.productName }}</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nom du fournisseur</label>
        <input name="supplierName" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Contact</label>
        <input name="contact" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">Prix unitaire (€)</label>
        <input name="unitPrice" type="number" step="0.01" class="form-control" required>
    </div>

    <button class="btn btn-success">Envoyer l’offre</button>
</form>

<a href="{{ path('purchase_group_show', {id: group.id}) }}" class="btn btn-secondary mt-3">Retour</a>
{% endblock %}
