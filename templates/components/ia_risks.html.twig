<div class="ia-risks">

    <div class="ia-risks-header">
        <h3>Analyse de risques</h3>
        <span class="ia-risks-status" data-status="idle">Prêt</span>
    </div>

    <div class="ia-risks-body">
        <button class="btn-primary ia-risks-run">
            Analyser les risques
        </button>

        <div class="ia-risks-loader" style="display:none;">
            <div class="spinner"></div>
            <p>Analyse en cours…</p>
        </div>

        <div class="ia-risks-results" style="display:none;">
            <h4>Risques détectés</h4>
            <ul class="ia-risks-list"></ul>
        </div>
    </div>

</div>
