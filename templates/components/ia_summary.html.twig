<div class="ia-summary">

    <div class="ia-summary-header">
        <h3>Résumé automatique</h3>
        <span class="ia-summary-status" data-status="idle">Prêt</span>
    </div>

    <div class="ia-summary-body">
        <button class="btn-primary ia-summary-run">
            Générer un résumé
        </button>

        <div class="ia-summary-loader" style="display:none;">
            <div class="spinner"></div>
            <p>Analyse en cours…</p>
        </div>

        <div class="ia-summary-result" style="display:none;">
            <h4>Résumé</h4>
            <div class="ia-summary-output"></div>
        </div>

        <div class="ia-card">
            <h2 class="ia-card-title">Résumé automatique</h2>
            <p class="ia-card-desc">Synthèse intelligente de documents, messages ou descriptions.</p>

            <textarea id="ia-summary-input" class="ia-textarea" placeholder="Collez un texte à résumer..."></textarea>

            <button id="ia-summary-run" class="ia-btn">Générer un résumé</button>

            <div id="ia-summary-output" class="ia-output"></div>
        </div>

    </div>

</div>
