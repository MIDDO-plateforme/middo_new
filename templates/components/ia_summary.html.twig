<div class="ia-summary">

    <div class="ia-summary-header">
        <h3>Résumé automatique</h3>
        <span class="ia-summary-status" data-status="idle">Prêt</span>
    </div>

    <div class="ia-summary-body">
        <button class="btn-primary ia-summary-run">
            Générer un résumé
        </button>

        <div class="ia-summary-loader" style="display:none;">
            <div class="spinner"></div>
            <p>Analyse en cours…</p>
        </div>

        <div class="ia-summary-result" style="display:none;">
            <h4>Résumé</h4>
            <div class="ia-summary-output"></div>
        </div>
    </div>

</div>
