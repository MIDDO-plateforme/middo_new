    position: absolute;
    top: 50%;
    right: -30px;
    transform: translateY(-50%);
    font-size: 120px;
    opacity: 0.05;
}

.ai-suggestion-header {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
}

.ai-suggestion-title {
    font-weight: 600;
    color: #667eea;
    font-size: 16px;
    margin: 0;
}

.ai-suggestion-content {
    color: #4a5568;
    font-size: 14px;
    line-height: 1.6;
    position: relative;
    z-index: 1;
}

.ai-suggestion-list {
    list-style: none;
    padding: 0;
    margin: 10px 0 0;
}

.ai-suggestion-list li {
