{# Styles CSS pour les composants IA #}
/* ==================== AI TOAST NOTIFICATIONS ==================== */
.ai-toast {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    padding: 16px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 300px;
    max-width: 500px;
    opacity: 0;
    transform: translateX(400px);
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    z-index: 9999;
}

.ai-toast.show {
    opacity: 1;
    transform: translateX(0);
}

.ai-toast-icon {
    font-size: 24px;
    flex-shrink: 0;
}

.ai-toast-message {
    flex: 1;
    color: #333;
    font-size: 14px;
    line-height: 1.4;
}

.ai-toast-success { border-left: 4px solid #10b981; }
.ai-toast-error { border-left: 4px solid #ef4444; }
.ai-toast-warning { border-left: 4px solid #f59e0b; }
.ai-toast-info { border-left: 4px solid #3b82f6; }

/* ==================== AI LOADING SPINNER ==================== */
.ai-loading {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #667eea;
    font-size: 14px;
    font-weight: 500;
}

.ai-spinner {
    width: 20px;
    height: 20px;
    border: 3px solid rgba(102, 126, 234, 0.2);
    border-top-color: #667eea;
    border-radius: 50%;
    animation: ai-spin 0.8s linear infinite;
}

@keyframes ai-spin {
    to { transform: rotate(360deg); }
}

/* ==================== AI SUGGESTION BOX ==================== */
.ai-suggestion-box {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border: 2px solid rgba(102, 126, 234, 0.2);
    border-radius: 12px;
    padding: 16px 20px;
    margin: 20px 0;
    position: relative;
    overflow: hidden;
}

