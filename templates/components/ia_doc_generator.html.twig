<div class="ia-doc-generator">

    <div class="ia-doc-generator-header">
        <h3>Génération de documents</h3>
        <span class="ia-doc-generator-status" data-status="idle">Prêt</span>
    </div>

    <div class="ia-doc-generator-body">

        <label class="ia-doc-label">
            Type de document
            <select class="ia-doc-type">
                <option value="contract">Contrat</option>
                <option value="summary">Note de synthèse</option>
                <option value="email">Email client</option>
                <option value="report">Rapport</option>
            </select>
        </label>

        <label class="ia-doc-label">
            Contexte / instructions
            <textarea class="ia-doc-input" placeholder="Décrivez le contexte, les clauses, le ton, etc."></textarea>
        </label>

        <div class="ia-doc-actions">
            <button class="btn-primary ia-doc-run">Générer</button>
            <button class="btn-outline ia-doc-clear">Effacer</button>
        </div>

        <div class="ia-doc-loader" style="display:none;">
            <div class="spinner"></div>
            <p>Génération en cours…</p>
        </div>

        <div class="ia-doc-result" style="display:none;">
            <h4>Document généré</h4>
            <pre class="ia-doc-output"></pre>
        </div>

        <div class="ia-card">
            <h2 class="ia-card-title">Générateur de documents</h2>
            <p class="ia-card-desc">Création de documents professionnels : contrats, emails, rapports, etc.</p>

            <textarea id="ia-docgen-input" class="ia-textarea" placeholder="Décrivez le document à générer..."></textarea>

            <button id="ia-docgen-run" class="ia-btn ia-btn-primary">Créer le document</button>

            <div id="ia-docgen-output" class="ia-output"></div>
        </div>

    </div>

</div>
