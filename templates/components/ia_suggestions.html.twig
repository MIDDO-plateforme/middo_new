<div class="ia-suggestions">

    <div class="ia-suggestions-header">
        <h3>Suggestions IA</h3>
        <span class="ia-suggestions-status" data-status="idle">Prêt</span>
    </div>

    <div class="ia-suggestions-body">

        <button class="btn-primary ia-suggestions-run">
            Générer des suggestions
        </button>

        <div class="ia-suggestions-loader" style="display:none;">
            <div class="spinner"></div>
            <p>Analyse en cours…</p>
        </div>

        <div class="ia-suggestions-results" style="display:none;">
            <h4>Recommandations</h4>
            <ul class="ia-suggestions-list"></ul>
        </div>

        <div class="ia-card">
            <h2 class="ia-card-title">Suggestions IA</h2>
            <p class="ia-card-desc">Analyse intelligente et recommandations basées sur votre contenu.</p>

            <textarea id="ia-suggestions-input" class="ia-textarea" placeholder="Décrivez votre besoin..."></textarea>

            <button id="ia-suggestions-run" class="ia-btn">Générer des suggestions</button>

            <div id="ia-suggestions-output" class="ia-output"></div>
        </div>

    </div>

</div>
