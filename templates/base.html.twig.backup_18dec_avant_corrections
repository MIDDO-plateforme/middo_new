    <script>
    // Sidebar Toggle Mobile
    document.addEventListener('DOMContentLoaded', function() {
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const sidebar = document.getElementById('sidebar');
        
        if (sidebarToggle && sidebar) {
            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('open');
            });
        }
        
        // Spinner on AJAX
        const spinner = document.getElementById('loading-spinner');
        const originalFetch = window.fetch;
        window.fetch = function(...args) {
            spinner.style.display = 'flex';
            return originalFetch.apply(this, args)
                .finally(() => {
                    setTimeout(() => {
                        spinner.style.display = 'none';
                    }, 300);
                });
        };
    });
    </script>
    <script>
// ==========================================
// MENU HAMBURGER - TOGGLE SIDEBAR
// ==========================================
document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.querySelector('.sidebar-toggle');
    const sidebar = document.querySelector('.middo-sidebar');
    const body = document.body;
    
    // Créer l'overlay si il n'existe pas
    let overlay = document.querySelector('.sidebar-overlay');
    if (!overlay) {
        overlay = document.createElement('div');
        overlay.className = 'sidebar-overlay';
        body.appendChild(overlay);
    }
    
    // Fonction toggle sidebar
    function toggleSidebar() {
        const isOpen = sidebar.classList.contains('active');
        
        if (isOpen) {
            // Fermer
            sidebar.classList.remove('active');
            body.classList.remove('sidebar-open');
            overlay.classList.remove('active');
        } else {
            // Ouvrir
            sidebar.classList.add('active');
            body.classList.add('sidebar-open');
            overlay.classList.add('active');
        }
    }
    
    // Event: Clic sur hamburger
    if (sidebarToggle) {
        sidebarToggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            toggleSidebar();
        });
    }
    
    // Event: Clic sur overlay (ferme sidebar)
    overlay.addEventListener('click', function() {
        if (sidebar.classList.contains('active')) {
            toggleSidebar();
        }
    });
    
    // Event: Touche Escape (ferme sidebar)
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && sidebar.classList.contains('active')) {
            toggleSidebar();
        }
    });
    
    // Event: Clic sur lien sidebar (ferme sur mobile)
    const sidebarLinks = sidebar.querySelectorAll('a');
    sidebarLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth <= 768 && sidebar.classList.contains('active')) {
                setTimeout(() => toggleSidebar(), 300);
            }
        });
    });
});
</script>

<style>
/* ==========================================
   SIDEBAR OVERLAY & ANIMATIONS
========================================== */
.sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 998;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(4px);
}

.sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Sidebar animations */
.middo-sidebar {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Mobile: Sidebar cachée par défaut */
@media (max-width: 768px) {
    .middo-sidebar {
        transform: translateX(-100%);
        position: fixed;
        left: 0;
        top: 0;
        height: 100vh;
        z-index: 999;
    }
    
    .middo-sidebar.active {
        transform: translateX(0);
        box-shadow: 4px 0 20px rgba(0, 0, 0, 0.3);
    }
}

/* Desktop: Sidebar toujours visible */
@media (min-width: 769px) {
    .sidebar-overlay {
        display: none !important;
    }
    
    .middo-sidebar {
        transform: translateX(0) !important;
    }
}

/* Empêcher le scroll du body quand sidebar ouverte (mobile) */
body.sidebar-open {
    overflow: hidden;
}

@media (min-width: 769px) {
    body.sidebar-open {
        overflow: auto;
    }
}

/* Animation hamburger icon */
.sidebar-toggle {
    cursor: pointer;
    transition: transform 0.3s ease;
}

.sidebar-toggle:hover {
    transform: scale(1.1);
}

.sidebar-toggle:active {
    transform: scale(0.95);
}
</style>
