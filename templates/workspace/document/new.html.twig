            </div>

            <div class="document-create-body">
                <div class="ai-suggestion-box">
                    <div class="icon">ü§ñ</div>
                    <div class="text">
                        <div class="title">IA activ√©e</div>
                        <div class="description">Votre document sera analys√© pour extraire des mots-cl√©s, √©valuer la lisibilit√© et sugg√©rer des am√©liorations</div>
                    </div>
                </div>

                {{ form_start(form) }}

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type) }}
                        {{ form_errors(form.type) }}
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                        {{ form_errors(form.status) }}
                    </div>
                </div>

                <div class="form-group full-width">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                    <small class="form-help">{{ form_help(form.content) }}</small>
                </div>

                <div class="form-group full-width">
                    {{ form_label(form.file) }}
                    <div class="file-upload-area" id="fileUploadArea">
                        <div class="file-upload-icon">üìé</div>
                        <div class="file-upload-text">Cliquez ou glissez un fichier ici</div>
                        {{ form_widget(form.file, {'attr': {'id': 'fileInput', 'style': 'display: none;'}}) }}
                        <small class="form-help">{{ form_help(form.file) }}</small>
                    </div>
                    <div class="file-info" id="fileInfo"></div>
                    {{ form_errors(form.file) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        ‚ú® Cr√©er le document
                    </button>
                    <a href="{{ path('app_workspace_document_index', {workspaceId: workspace.id}) }}" class="btn-secondary">
                        ‚Üê Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileUploadArea = document.getElementById('fileUploadArea');
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');

            // Click to upload
            fileUploadArea.addEventListener('click', function() {
                fileInput.click();
            });

            // File selected
            fileInput.addEventListener('change', function() {
                if (this.files.length > 0) {
                    const file = this.files[0];
                    const fileSize = (file.size / 1024 / 1024).toFixed(2);
                    fileInfo.innerHTML = `
                        <strong>üìé Fichier s√©lectionn√© :</strong><br>
                        ${file.name} (${fileSize} MB)
                    `;
                    fileInfo.classList.add('show');
                }
            });

            // Drag and drop
            fileUploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('dragover');
            });

            fileUploadArea.addEventListener('dragleave', function() {
                this.classList.remove('dragover');
            });

            fileUploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
                
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    fileInput.files = files;
                    const event = new Event('change');
                    fileInput.dispatchEvent(event);
                }
            });

            // Real-time title validation
            const titleInput = document.querySelector('#workspace_document_title');
            if (titleInput) {
                titleInput.addEventListener('input', function() {
                    if (this.value.length >= 3) {
                        this.style.borderColor = '#28a745';
                    } else {
                        this.style.borderColor = '#dc3545';
                    }
                });
            }
        });
    </script>
{% endblock %}
