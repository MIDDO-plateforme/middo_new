{% block javascripts %}
    {{ parent() }}
    <script>
        // Time tracking calculations
        const estimatedInput = document.getElementById('estimatedHours');
        const actualInput = document.getElementById('actualHours');
        const estimatedDisplay = document.getElementById('estimatedDisplay');
        const actualDisplay = document.getElementById('actualDisplay');
        const varianceDisplay = document.getElementById('varianceDisplay');
        const varianceStat = document.getElementById('varianceStat');

        function updateTimeComparison() {
            const estimated = parseFloat(estimatedInput.value) || 0;
            const actual = parseFloat(actualInput.value) || 0;
            const variance = actual - estimated;

            estimatedDisplay.textContent = estimated.toFixed(1) + 'h';
            actualDisplay.textContent = actual.toFixed(1) + 'h';
            varianceDisplay.textContent = Math.abs(variance).toFixed(1) + 'h';

            if (variance > 0) {
                varianceStat.classList.add('over');
                varianceStat.classList.remove('under');
            } else {
                varianceStat.classList.remove('over');
            }
        }

        if (estimatedInput && actualInput) {
            estimatedInput.addEventListener('input', updateTimeComparison);
            actualInput.addEventListener('input', updateTimeComparison);
            updateTimeComparison();
        }

        // Checklist management
        function addChecklistItem() {
            const builder = document.getElementById('checklistBuilder');
            const newItem = document.createElement('div');
            newItem.className = 'checklist-item';
            newItem.innerHTML = `
                <input type="text" placeholder="Item de checklist..." class="checklist-input">
                <button type="button" class="btn-remove" onclick="removeChecklistItem(this)">‚ùå</button>
            `;
            builder.appendChild(newItem);
        }

        function removeChecklistItem(button) {
            const item = button.parentElement;
            const builder = document.getElementById('checklistBuilder');
            if (builder.children.length > 1) {
                item.remove();
            } else {
                alert('Il doit rester au moins un item dans la checklist');
            }
        }

        // Form submission with checklist data
        const form = document.querySelector('.workspace-task-form');
        if (form) {
            form.addEventListener('submit', function(e) {
                // Collect checklist items
                const checklistInputs = document.querySelectorAll('.checklist-input');
                const checklistData = [];
                checklistInputs.forEach(input => {
                    if (input.value.trim()) {
                        checklistData.push({
                            text: input.value.trim(),
                            completed: false
                        });
                    }
                });

                // Add hidden field with checklist data
                if (checklistData.length > 0) {
                    const hiddenInput = document.createElement('input');
                    hiddenInput.type = 'hidden';
                    hiddenInput.name = 'checklist_data';
                    hiddenInput.value = JSON.stringify(checklistData);
                    form.appendChild(hiddenInput);
                }

                const submitBtn = form.querySelector('.btn-primary');
                submitBtn.innerHTML = '‚è≥ Cr√©ation en cours...';
                submitBtn.disabled = true;
            });
        }
    </script>
{% endblock %}
