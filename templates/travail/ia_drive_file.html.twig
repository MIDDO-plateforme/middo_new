{% extends 'base_app.html.twig' %}

{% block title %}{{ file.name }} - IA Drive{% endblock %}

{% block content %}

<div class="page-header">
    <h1>{{ file.name }}</h1>
    <p class="breadcrumb">Espace de Travail > IA Drive > {{ file.name }}</p>
</div>

<div class="file-layout">

    <aside class="file-sidebar">

        <h3>IA</h3>
        <button class="btn">Analyser le document</button>
        <button class="btn-outline">Résumer</button>
        <button class="btn-outline">Extraire les données</button>
        <button class="btn-outline">Classer automatiquement</button>
        <button class="btn-outline">Traduire</button>
        <button class="btn-outline">Simplifier</button>

        <h3>Actions</h3>
        <button class="btn-outline">Télécharger</button>
        <button class="btn-outline">Renommer</button>
        <button class="btn-outline">Déplacer</button>
        <button class="btn-outline">Supprimer</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Police adaptée</label>

    </aside>

    <section class="file-main">

        <h2>Aperçu du document</h2>

        <div class="file-preview">
            <p>Prévisualisation du fichier : {{ file.name }}</p>
        </div>

        <h2>Analyse IA</h2>

        <div class="file-analysis">
            <p>{{ file.analysis }}</p>
        </div>

    </section>

</div>

{% endblock %}
