{% extends 'base_app.html.twig' %}

{% block title %}Tableur - MIDDO{% endblock %}

{% block content %}

<div class="page-header">
    <h1>Tableur</h1>
    <p class="breadcrumb">Espace de Travail > Tableur</p>
</div>

<div class="spreadsheet-layout">

    <aside class="spreadsheet-sidebar">

        <h3>Actions</h3>
        <button class="btn">Nouveau tableau</button>
        <button class="btn-outline">Importer Excel</button>
        <button class="btn-outline">Exporter</button>

        <h3>IA</h3>
        <button class="btn-outline">Analyser les données</button>
        <button class="btn-outline">Détecter les erreurs</button>
        <button class="btn-outline">Prédire les tendances</button>
        <button class="btn-outline">Créer un graphique</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode contraste élevé</label><br>
        <label><input type="checkbox"> Police adaptée</label>

    </aside>

    <section class="spreadsheet-main">

        <h3>Tableau actif</h3>

        <table class="spreadsheet-table">
            <thead>
                <tr>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                    <tr>
                        <td contenteditable="true">{{ row.a }}</td>
                        <td contenteditable="true">{{ row.b }}</td>
                        <td contenteditable="true">{{ row.c }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </section>

</div>

{% endblock %}
