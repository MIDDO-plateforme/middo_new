{% extends 'base_app.html.twig' %}

{% block title %}{{ note.title }} - MIDDO{% endblock %}

{% block content %}

<div class="page-header">
    <h1>{{ note.title }}</h1>
    <p class="breadcrumb">Espace de Travail > Notes > {{ note.title }}</p>
</div>

<div class="note-show-layout">

    <section class="note-main">
        <div class="note-content" contenteditable="true">
            {{ note.content }}
        </div>
    </section>

    <aside class="note-ia-panel">
        <h3>Assistant IA</h3>

        <button class="btn">Structurer la page</button>
        <button class="btn-outline">Résumer</button>
        <button class="btn-outline">Améliorer</button>
        <button class="btn-outline">Traduire</button>
        <button class="btn-outline">Créer un plan</button>
        <button class="btn-outline">Créer une version simplifiée</button>

        <h4>Suggestions IA</h4>
        <ul>
            <li>Ajouter une section “Objectifs”.</li>
            <li>Créer un tableau récapitulatif.</li>
            <li>Ajouter une liste d’actions.</li>
        </ul>
    </aside>

</div>

{% endblock %}
