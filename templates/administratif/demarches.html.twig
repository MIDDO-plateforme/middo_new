{% extends 'layout/app_layout.html.twig' %}

{% block page_title %}
    Démarches administratives automatisées
{% endblock %}

{% block page_subtitle %}
    Génération IA, pré-remplissage, analyse et gestion de vos démarches
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary">Nouvelle démarche</button>
{% endblock %}

{% block page_content %}

<div class="demarches-layout">

    <aside class="demarches-sidebar" aria-label="Menu démarches administratives">

        <h3>Créer une démarche</h3>
        <button class="btn">Nouvelle démarche</button>

        <h3>IA</h3>
        <button class="btn-outline">Pré-remplir un formulaire</button>
        <button class="btn-outline">Analyser mes documents</button>
        <button class="btn-outline">Détecter les pièces manquantes</button>
        <button class="btn-outline">Générer un dossier complet</button>
        <button class="btn-outline">Expliquer la procédure</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Traduction automatique</label>

    </aside>

    <section class="demarches-main">

        <h2>Mes démarches</h2>

        <ul class="demarches-list">
            {% for d in demarches %}
                <li class="demarche-item">
                    <div>
                        <strong>{{ d.title }}</strong>
                        <p>{{ d.description }}</p>
                    </div>
                    <span class="demarche-status {{ d.status|lower }}">
                        {{ d.status }}
                    </span>
                </li>
            {% endfor %}
        </ul>

    </section>

</div>

{% endblock %}
