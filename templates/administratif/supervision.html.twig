{% extends 'layout/app_layout.html.twig' %}

{% block page_title %}
    Supervision & Inspection
{% endblock %}

{% block page_subtitle %}
    Analyse IA, conformité, rapports et suivi des entités supervisées
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary">Nouvelle inspection</button>
{% endblock %}

{% block page_content %}

<div class="supervision-layout">

    <aside class="supervision-sidebar" aria-label="Menu supervision">

        <h3>Actions</h3>
        <button class="btn">Nouvelle inspection</button>
        <button class="btn-outline">Analyser une entité</button>
        <button class="btn-outline">Générer un rapport IA</button>

        <h3>IA</h3>
        <button class="btn-outline">Détecter les anomalies</button>
        <button class="btn-outline">Vérifier la conformité</button>
        <button class="btn-outline">Proposer un plan d’action</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Traduction automatique</label>

    </aside>

    <section class="supervision-main">

        <h2>Entités supervisées</h2>

        <table class="supervision-table">
            <thead>
                <tr>
                    <th>Entité</th>
                    <th>Type</th>
                    <th>Conformité IA</th>
                    <th>Dernière inspection</th>
                </tr>
            </thead>
            <tbody>
                {% for e in entities %}
                    <tr>
                        <td>{{ e.name }}</td>
                        <td>{{ e.type }}</td>
                        <td>{{ e.compliance }}</td>
                        <td>{{ e.last_check }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </section>

</div>

{% endblock %}
