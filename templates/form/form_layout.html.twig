{% block form_row %}
<div class="mdo-form-row">
    {{ form_label(form) }}
    {{ form_widget(form) }}
    {{ form_errors(form) }}
</div>
{% endblock %}

{% block form_errors %}
{% if errors|length > 0 %}
    <ul class="mdo-form-errors">
        {% for error in errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}
