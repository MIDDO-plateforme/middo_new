{% extends 'base.html.twig' %}

{% block body %}
<h1>Release Funds</h1>

<p><strong>Blocked Amount:</strong> {{ escrow.blockedAmount }} €</p>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Amount to Release (€)</label>
        <input name="amount" type="number" step="0.01" class="form-control" required>
    </div>

    <button class="btn btn-success">Release</button>
</form>

<a href="{{ path('escrow_show', {id: escrow.contract.id}) }}" class="btn btn-secondary mt-3">Back</a>
{% endblock %}
