{% extends 'layout/app_layout.html.twig' %}

{% block page_title %}
    Plan IA – {{ project.name }}
{% endblock %}

{% block page_subtitle %}
    Phases générées automatiquement, analyse IA et structuration du projet
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary">Regénérer le plan</button>
{% endblock %}

{% block page_content %}

<div class="plan-layout">

    <aside class="plan-sidebar" aria-label="Menu plan IA">

        <h3>IA</h3>
        <button class="btn">Regénérer le plan</button>
        <button class="btn-outline">Analyser les risques</button>
        <button class="btn-outline">Créer les tâches</button>

        <h3>Actions</h3>
        <button class="btn-outline">Exporter</button>
        <button class="btn-outline">Ajouter une phase</button>

    </aside>

    <section class="plan-main">

        <h2>Phases du projet</h2>

        <ul class="phase-list">
            {% for phase in plan %}
                <li class="phase-item">
                    <h3>{{ phase.title }}</h3>
                    <p>{{ phase.description }}</p>

                    <ul class="task-list">
                        {% for t in phase.tasks %}
                            <li class="task-item">{{ t }}</li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>

    </section>

</div>

{% endblock %}
