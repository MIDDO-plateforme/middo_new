{% extends 'base_app.html.twig' %}

{% block title %}Tâches IA - {{ project.name }}{% endblock %}

{% block content %}

<div class="page-header">
    <h1>Tâches du projet</h1>
    <p class="breadcrumb">Projets > {{ project.name }} > Tâches IA</p>
</div>

<div class="tasks-layout">

    <aside class="tasks-sidebar">

        <h3>IA</h3>
        <button class="btn">Générer les tâches automatiquement</button>
        <button class="btn-outline">Analyser les dépendances</button>
        <button class="btn-outline">Détecter les retards</button>
        <button class="btn-outline">Proposer les prochaines étapes</button>

        <h3>Actions</h3>
        <button class="btn-outline">Ajouter une tâche</button>
        <button class="btn-outline">Exporter</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Police adaptée</label>

    </aside>

    <section class="tasks-main">

        <h2>Liste des tâches</h2>

        <ul class="task-list">
            {% for t in tasks %}
                <li class="task-item {{ t.status|lower }}">
                    <div>
                        <strong>{{ t.title }}</strong><br>
                        <span class="task-desc">{{ t.description }}</span>
                    </div>
                    <div class="task-meta">
                        <span class="task-status">{{ t.status }}</span><br>
                        <span class="task-date">Échéance : {{ t.deadline }}</span>
                    </div>
                </li>
            {% endfor %}
        </ul>

    </section>

</div>

{% endblock %}
