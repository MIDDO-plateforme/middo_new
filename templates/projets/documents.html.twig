{% extends 'layout/app_layout.html.twig' %}

{% block page_title %}
    Documents – {{ project.name }}
{% endblock %}

{% block page_subtitle %}
    Analyse IA, classification automatique et gestion des documents du projet
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary">Ajouter un document</button>
{% endblock %}

{% block page_content %}

<div class="docs-layout">

    <aside class="docs-sidebar" aria-label="Menu documents IA">

        <h3>IA</h3>
        <button class="btn">Analyser les documents</button>
        <button class="btn-outline">Classer automatiquement</button>
        <button class="btn-outline">Relier aux tâches</button>
        <button class="btn-outline">Détecter les documents manquants</button>

        <h3>Actions</h3>
        <button class="btn-outline">Ajouter un document</button>
        <button class="btn-outline">Importer depuis IA Drive</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Police adaptée</label>

    </aside>

    <section class="docs-main">

        <h2>Liste des documents</h2>

        <ul class="doc-list">
            {% for d in documents %}
                <li class="doc-item">
                    <strong>{{ d.name }}</strong><br>
                    <span class="doc-type">{{ d.type }}</span><br>
                    <span class="doc-link">Lié à : {{ d.link }}</span>
                </li>
            {% endfor %}
        </ul>

    </section>

</div>

{% endblock %}
