{% extends 'base_app.html.twig' %}

{% block title %}{{ project.name }} - Projet{% endblock %}

{% block content %}

<div class="page-header">
    <h1>{{ project.name }}</h1>
    <p class="breadcrumb">Projets > {{ project.name }}</p>
</div>

<div class="project-detail-layout">

    <aside class="project-sidebar">

        <h3>IA</h3>
        <button class="btn">Analyser le projet</button>
        <button class="btn-outline">Générer un plan automatique</button>
        <button class="btn-outline">Détecter les risques</button>
        <button class="btn-outline">Créer les tâches</button>

        <h3>Actions</h3>
        <button class="btn-outline">Modifier</button>
        <button class="btn-outline">Ajouter un document</button>
        <button class="btn-outline">Ajouter une tâche</button>

        <h3>Accessibilité</h3>
        <label><input type="checkbox"> Lecture vocale</label><br>
        <label><input type="checkbox"> Mode simplifié</label><br>
        <label><input type="checkbox"> Police adaptée</label>

    </aside>

    <section class="project-main">

        <h2>Description</h2>
        <p>{{ project.description }}</p>

        <h2>Avancement</h2>
        <div class="progress-bar">
            <div class="progress" style="width: {{ project.progress }}%"></div>
        </div>

        <h2>Tâches</h2>
        <ul class="task-list">
            {% for t in project.tasks %}
                <li class="task-item {{ t.status|lower }}">
                    <strong>{{ t.title }}</strong>
                    <span>{{ t.status }}</span>
                </li>
            {% endfor %}
        </ul>

        <h2>Documents</h2>
        <ul class="doc-list">
            {% for d in project.documents %}
                <li>{{ d }}</li>
            {% endfor %}
        </ul>

        <h2>Risques IA</h2>
        <div class="risk-box">
            <p>{{ project.risks }}</p>
        </div>

    </section>

</div>

{% endblock %}
