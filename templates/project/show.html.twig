{% extends 'base_app.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- En-t√™te -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-6 text-white">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold">{{ project.name }}</h1>
                    <p class="text-blue-100 mt-1">Cr√©√© le {{ project.createdAt|date('d/m/Y √† H:i') }}</p>
                </div>
                <div class="flex space-x-3">
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" 
                       class="px-4 py-2 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition">
                        ‚úèÔ∏è √âditer
                    </a>
                    <a href="{{ path('app_project_list') }}" 
                       class="px-4 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition">
                        ‚Üê Retour
                    </a>
                </div>
            </div>
        </div>

        <!-- Contenu -->
        <div class="p-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Colonne principale -->
            <div class="lg:col-span-2 space-y-6">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">üìã Description</h2>
                    <div class="prose max-w-none text-gray-700 bg-gray-50 p-4 rounded-lg">
                        {{ project.description ? (project.description|nl2br) : 'Aucune description disponible.' }}
                    </div>
                </div>

                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">‚úÖ T√¢ches R√©centes</h2>
                    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 text-center text-gray-500">
                        <p>Module de gestion des t√¢ches √† venir.</p>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Statut -->
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <h3 class="font-semibold text-gray-900 mb-3">üìä Statut</h3>
                    <span class="inline-block px-4 py-2 rounded-full text-sm font-medium
                        {% if project.status == 'active' %}bg-green-100 text-green-800
                        {% elseif project.status == 'draft' %}bg-gray-100 text-gray-800
                        {% else %}bg-red-100 text-red-800{% endif %}">
                        {{ project.status|upper }}
                    </span>
                </div>

                <!-- √âquipe -->
                <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                    <h3 class="font-semibold text-gray-900 mb-3">üë• √âquipe ({{ project.members|length + 1 }})</h3>
                    <ul class="space-y-3">
                        <!-- Propri√©taire -->
                        <li class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold mr-3">
                                {{ project.owner.name ? project.owner.name|slice(0,1)|upper : project.owner.email|slice(0,1)|upper }}
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">
                                    {{ project.owner.name ? project.owner.name : project.owner.email }}
                                </p>
                                <p class="text-xs text-gray-500">üëë Propri√©taire</p>
                            </div>
                        </li>

                        <!-- Membres -->
                        {% for member in project.members %}
                        <li class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-gray-400 flex items-center justify-center text-white font-bold mr-3">
                                {{ member.name ? member.name|slice(0,1)|upper : member.email|slice(0,1)|upper }}
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">
                                    {{ member.name ? member.name : member.email }}
                                </p>
                                <p class="text-xs text-gray-500">Membre</p>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}