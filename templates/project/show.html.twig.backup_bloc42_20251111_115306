// ============================================
// SECTION SENTIMENT LARGE - SESSION 19 Ã‰TAPE B
// ============================================

async function loadSentimentSection() {
    const section = document.getElementById('sentiment-section');
    const loading = document.getElementById('sentiment-section-loading');
    const error = document.getElementById('sentiment-section-error');
    const circleLarge = document.getElementById('sentimentCircleLarge');
    const percentLarge = document.getElementById('sentimentPercentLarge');
    const labelLarge = document.getElementById('sentimentLabelLarge');
    const detailScore = document.getElementById('detailScoreLarge');
    const detailCategory = document.getElementById('detailCategoryLarge');
    
    // Reset UI
    section.classList.add('hidden');
    loading.classList.remove('hidden');
    error.classList.add('hidden');
    
    try {
        // Appel API
        const response = await fetch('/api/ai/analyze-sentiment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ projectDescription })
        });
        
        if (!response.ok) throw new Error('Erreur API');
        
        const data = await response.json();
        
        // Animation de la grande jauge circulaire
        const score = Math.round(data.score || 0);
        const circumference = 502.4; // 2 * PI * 80
        const offset = circumference - (circumference * score / 100);
        
        circleLarge.style.strokeDashoffset = offset;
        
        // Couleur dynamique et label
        let colorClass = '';
        if (score < 40) {
            circleLarge.style.stroke = '#ef4444'; // Rouge
            labelLarge.textContent = data.label || 'NÃ©gatif';
            labelLarge.className = 'text-lg font-semibold text-red-600 mt-2';
            colorClass = 'text-red-600';
        } else if (score < 60) {
            circleLarge.style.stroke = '#f59e0b'; // Orange
            labelLarge.textContent = data.label || 'Neutre';
            labelLarge.className = 'text-lg font-semibold text-orange-600 mt-2';
            colorClass = 'text-orange-600';
        } else {
            circleLarge.style.stroke = '#10b981'; // Vert
            labelLarge.textContent = data.label || 'Positif';
            labelLarge.className = 'text-lg font-semibold text-green-600 mt-2';
            colorClass = 'text-green-600';
        }
        
        // Animer le compteur
        animateCounter(percentLarge, 0, score, 1500);
        
        // Mettre Ã  jour les dÃ©tails
        detailScore.textContent = score + '%';
        detailScore.className = 'text-3xl font-bold ' + colorClass;
        detailCategory.textContent = data.label || '-';
        detailCategory.className = 'text-3xl font-bold ' + colorClass;
        
        loading.classList.add('hidden');
        section.classList.remove('hidden');
        
        // Scroll smooth vers la section
        section.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
    } catch (err) {
        console.error('Erreur section sentiment:', err);
        loading.classList.add('hidden');
        error.classList.remove('hidden');
        
        // Toast d'erreur
        if (window.toast) {
            window.toast.show('Impossible d\'analyser le sentiment. Veuillez réessayer.', 'error', 5000);
        }
        
        setTimeout(() => {
            error.classList.add('hidden');
            section.classList.remove('hidden');
        }, 4000);
    }
}

// ============================================
// WIDGET SENTIMENT SIDEBAR - SESSION 19
// ============================================

const projectDescription = `{{ project.description|raw }}`;
let sentimentCache = null;

async function loadSentimentWidget() {
    const widget = document.getElementById('sentiment-widget');
    const loading = document.getElementById('sentiment-loading');
    const error = document.getElementById('sentiment-error');
    const circle = document.getElementById('sentimentCircle');
    const percent = document.getElementById('sentimentPercent');
    const status = document.getElementById('sentimentStatus');
    
    // Reset UI
    widget.classList.add('hidden');
    loading.classList.remove('hidden');
    error.classList.add('hidden');
    
    try {
        // Appel API
        const response = await fetch('/api/ai/analyze-sentiment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ projectDescription })
        });
        
        if (!response.ok) throw new Error('Erreur API');
        
        const data = await response.json();
        sentimentCache = data;
        
        // Animation de la jauge circulaire
        const score = Math.round(data.score || 0);
        const circumference = 264; // 2 * PI * 42
        const offset = circumference - (circumference * score / 100);
        
        circle.style.strokeDashoffset = offset;
        
        // Couleur dynamique
        if (score < 40) {
            circle.style.stroke = '#ef4444'; // Rouge
            status.textContent = data.label || 'NÃƒÂ©gatif';
            status.className = 'text-sm font-semibold text-red-600 mb-3';
        } else if (score < 60) {
            circle.style.stroke = '#f59e0b'; // Orange
            status.textContent = data.label || 'Neutre';
            status.className = 'text-sm font-semibold text-orange-600 mb-3';
        } else {
            circle.style.stroke = '#10b981'; // Vert
            status.textContent = data.label || 'Positif';
            status.className = 'text-sm font-semibold text-green-600 mb-3';
        }
        
        // Animer le compteur
        animateCounter(percent, 0, score, 1000);
        
        loading.classList.add('hidden');
        widget.classList.remove('hidden');
        
    } catch (err) {
        console.error('Erreur widget sentiment:', err);
        loading.classList.add('hidden');
        error.classList.remove('hidden');
        
        // Toast d'erreur
        if (window.toast) {
            window.toast.show('Impossible d\'analyser le sentiment. Veuillez réessayer.', 'error', 5000);
        }
        
        setTimeout(() => {
            error.classList.add('hidden');
            widget.classList.remove('hidden');
        }, 3000);
    }
}

function animateCounter(element, start, end, duration) {
    const startTime = performance.now();
    const step = (currentTime) => {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        const value = Math.floor(start + (end - start) * progress);
        element.textContent = value + '%';
        if (progress < 1) requestAnimationFrame(step);
    };
    requestAnimationFrame(step);
}

// Auto-chargement optionnel (dÃƒÂ©commentez pour activer)
// window.addEventListener('load', () => setTimeout(loadSentimentWidget, 500));
</script>

