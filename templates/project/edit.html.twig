{% extends 'base.html.twig' %}

{% block title %}Modifier le projet - MIDDO{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Modifier le projet
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.title) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_row(form.description) }}
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.budget) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                            <a href="{{ path('app_project_my_projects') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="card mt-3 border-danger">
                <div class="card-body">
                    <h5 class="text-danger">Zone de danger</h5>
                    <p class="text-muted">La suppression est irréversible.</p>
                    {{ include('project/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}