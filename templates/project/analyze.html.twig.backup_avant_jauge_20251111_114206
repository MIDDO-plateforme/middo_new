{% block title %}Analyse Sentiment - {{ project.title }} - MIDDO{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 py-12">
    <div class="container mx-auto px-4 max-w-4xl">
        
        <!-- En-t√™te -->
        <div class="mb-8">
            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
                ‚Üê Retour au projet
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Analyse de Sentiment</h1>
            <p class="text-gray-600 mt-2">{{ project.title }}</p>
        </div>

        <!-- Bouton d'analyse -->
        <div class="mb-8 text-center">
            <button id="analyze-btn" class="px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:shadow-xl transition-all duration-300 font-semibold text-lg">
                üîç Analyser le sentiment du projet
            </button>
        </div>

        <!-- Zone r√©sultat -->
        <div id="result-container" class="bg-white rounded-xl shadow-lg p-8" style="display: none;">
            <h2 class="text-2xl font-bold text-center mb-6">R√©sultat de l'Analyse</h2>
            
            <div class="flex justify-center mb-6">
                <div class="text-center">
                    <div id="score-display" class="text-6xl font-bold text-gray-900 mb-2">--</div>
                    <div id="label-display" class="text-2xl font-semibold text-gray-600">En attente...</div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const analyzeBtn = document.getElementById('analyze-btn');
    const resultContainer = document.getElementById('result-container');
    const scoreDisplay = document.getElementById('score-display');
    const labelDisplay = document.getElementById('label-display');

    analyzeBtn.addEventListener('click', async () => {
        console.log('üîç D√©but analyse...');
        
        // D√©sactiver le bouton
        analyzeBtn.disabled = true;
        analyzeBtn.textContent = '‚è≥ Analyse en cours...';
        
        try {
            // Appel API
            const response = await fetch('/api/ai/analyze-sentiment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    projectDescription: '{{ project.description|escape('js') }}'
                })
            });

            const data = await response.json();
            console.log('‚úÖ R√©sultat:', data);

            // Afficher r√©sultat
            resultContainer.style.display = 'block';
            scoreDisplay.textContent = data.score + '%';
            labelDisplay.textContent = data.label;
            
            // Appliquer couleur selon score
            if (data.score >= 70) {
                scoreDisplay.className = 'text-6xl font-bold text-green-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-green-700';
            } else if (data.score >= 40) {
                scoreDisplay.className = 'text-6xl font-bold text-yellow-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-yellow-700';
            } else {
                scoreDisplay.className = 'text-6xl font-bold text-red-600 mb-2';
                labelDisplay.className = 'text-2xl font-semibold text-red-700';
            }

            // Toast de succ√®s (si disponible)
            if (window.toast) {
                window.toast.show(`‚úÖ Analyse termin√©e : ${data.score}% ${data.label}`, 'success', 5000);
            }
            
        } catch (error) {
            console.error('‚ùå Erreur:', error);
            alert('Erreur lors de l\'analyse. Veuillez r√©essayer.');
            
            // Toast d'erreur (si disponible)
            if (window.toast) {
                window.toast.show('‚ùå Erreur lors de l\'analyse', 'error', 5000);
            }
        } finally {
            // R√©activer le bouton
            analyzeBtn.disabled = false;
            analyzeBtn.textContent = 'üîç Analyser le sentiment du projet';
        }
    });
});
</script>

{% endblock %}