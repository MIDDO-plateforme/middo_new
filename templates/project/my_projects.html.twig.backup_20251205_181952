<!-- SCRIPT INLINE BOUTONS IA -->
<script>
console.log('🔥 [INLINE] Script inline chargé !');

window.addEventListener('load', function() {
    console.log('🔥 [INLINE] Window loaded, recherche boutons...');
    
    setTimeout(function() {
        const buttons = document.querySelectorAll('[data-action]');
        console.log('🔥 [INLINE] ' + buttons.length + ' boutons trouvés');
        
        if (buttons.length === 0) {
            console.error('❌ [INLINE] AUCUN bouton data-action trouvé !');
            return;
        }
        
        buttons.forEach(function(button) {
            const action = button.getAttribute('data-action');
            console.log('🔥 [INLINE] Bouton : ' + action);
            
            button.addEventListener('click', function(e) {
                e.preventDefault();
                console.log('🔥 [INLINE] CLIC sur : ' + action);
                
                if (typeof window.MIDDOAIAssistant !== 'undefined') {
                    if (action === 'suggestions') {
                        console.log('🔥 [INLINE] Appel handleSuggestions()');
                        window.MIDDOAIAssistant.handleSuggestions();
                    } else if (action === 'matching') {
                        console.log('🔥 [INLINE] Appel handleMatching()');
                        window.MIDDOAIAssistant.handleMatching();
                    } else if (action === 'sentiment') {
                        console.log('🔥 [INLINE] Appel handleSentiment()');
                        window.MIDDOAIAssistant.handleSentiment();
                    } else if (action === 'chatbot') {
                        console.log('🔥 [INLINE] Appel handleChatbot()');
                        window.MIDDOAIAssistant.handleChatbot();
                    }
                } else {
                    console.error('❌ [INLINE] window.MIDDOAIAssistant NON DÉFINI !');
                    alert('✅ Bouton ' + action + ' détecté !\n❌ MIDDOAIAssistant non chargé.');
                }
            });
        });
        
        console.log('✅ [INLINE] Event listeners attachés !');
    }, 500);
});
</script>
<!-- FIN SCRIPT INLINE -->
