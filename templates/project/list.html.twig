{% extends 'base_app.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Mes Projets</h1>
        <a href="{{ path('app_project_new') }}" 
           class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            + Nouveau Projet
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for project in projects %}
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
            <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-semibold text-gray-900">{{ project.name }}</h3>
                <span class="px-3 py-1 text-xs font-semibold rounded-full
                    {% if project.status == 'active' %}bg-green-100 text-green-800
                    {% elseif project.status == 'draft' %}bg-gray-100 text-gray-800
                    {% else %}bg-red-100 text-red-800{% endif %}">
                    {{ project.status|upper }}
                </span>
            </div>
            
            <p class="text-gray-600 mb-4 line-clamp-3">
                {{ project.description ? project.description : 'Aucune description.' }}
            </p>
            
            <div class="flex justify-between items-center text-sm border-t pt-4">
                <span class="text-gray-500">
                    <i class="fas fa-users"></i> {{ project.members|length }} membres
                </span>
                <a href="{{ path('app_project_show', {'id': project.id}) }}" 
                   class="text-blue-600 hover:text-blue-800 font-medium">
                    Voir détails →
                </a>
            </div>
        </div>
        {% else %}
        <div class="col-span-full text-center py-16">
            <p class="text-gray-500 text-lg mb-4">Aucun projet trouvé.</p>
            <a href="{{ path('app_project_new') }}" class="text-blue-600 hover:underline">
                Créer votre premier projet →
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}