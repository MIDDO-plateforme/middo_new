                                    {% set userTypeLower = user.userType|lower %}
                                    {% if userTypeLower == 'entrepreneur' %}
                                        <span class="badge bg-success">üöÄ Entrepreneur</span>
                                    {% elseif userTypeLower == 'investisseur' or userTypeLower == 'investor' %}
                                        <span class="badge bg-warning text-dark">üí∞ Investisseur</span>
                                    {% elseif userTypeLower == 'entreprise' or userTypeLower == 'company' %}
                                        <span class="badge bg-info">üè¢ Entreprise</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ user.userType|capitalize }}</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-2">
                            <a href="#" class="btn btn-primary w-100">
                                <i class="fas fa-edit"></i> Modifier le profil
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="{{ path('app_logout') }}" class="btn btn-danger w-100">
                                <i class="fas fa-sign-out-alt"></i> Se d√©connecter
                            </a>
                        </div>
                    </div>

                    <div class="row mt-2">
