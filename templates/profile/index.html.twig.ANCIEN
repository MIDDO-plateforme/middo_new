                                <i class="fas fa-arrow-left"></i> Retour √† l'accueil
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            {% set userTypeLower = user.userType|lower %}
            
            {% if userTypeLower == 'entrepreneur' %}
            <div class="card shadow mt-4">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-rocket"></i> Tableau de bord Entrepreneur</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
