{% extends 'base.html.twig' %}

{% block title %}Mon Profil - MIDDO{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3><i class="fas fa-user-circle"></i> Mon Profil</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="profile-avatar mb-3">
                                <i class="fas fa-user-circle fa-7x text-primary"></i>
                            </div>
                            <h4>{{ user.firstName }} {{ user.lastName }}</h4>
                            <p class="text-muted">
                                <i class="fas fa-briefcase"></i> {{ user.userType|capitalize }}
                            </p>
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-3">Informations du compte</h5>
                            
                            <div class="mb-3">
                                <label class="fw-bold"><i class="fas fa-envelope"></i> Email :</label>
                                <p class="text-muted">{{ user.email }}</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold"><i class="fas fa-user"></i> Pr√©nom :</label>
                                <p class="text-muted">{{ user.firstName }}</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold"><i class="fas fa-user"></i> Nom :</label>
                                <p class="text-muted">{{ user.lastName }}</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold"><i class="fas fa-id-badge"></i> Type de compte :</label>
