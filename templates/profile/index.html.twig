{% extends 'base.html.twig' %}
{% block title %}Mon Profil{% endblock %}
{% block body %}
<div class="container my-5">
    <div class="alert alert-success text-center" style="padding: 40px; font-size: 28px; font-weight: bold; border: 5px solid green;">
        NOUVEAU TEMPLATE ACTIF - SI VOUS VOYEZ CECI CA MARCHE !
    </div>
    <div class="card shadow-lg">
        <div class="card-header text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h1>{{ app.user.firstName }} {{ app.user.lastName }}</h1>
            <span class="badge bg-light text-primary fs-4">{{ app.user.userType }}</span>
        </div>
        <div class="card-body p-5">
            <h3 class="text-primary mb-4">Informations</h3>
            <div class="row">
                <div class="col-md-6">
                    <p class="fs-5"><strong>Email:</strong> {{ app.user.email }}</p>
                    {% if app.user.villeActuelle %}<p class="fs-5"><strong>Ville:</strong> {{ app.user.villeActuelle }}</p>{% endif %}
                    {% if app.user.paysResidence %}<p class="fs-5"><strong>Pays:</strong> {{ app.user.paysResidence }}</p>{% endif %}
                </div>
                <div class="col-md-6">
                    {% if app.user.genre %}<p class="fs-5"><strong>Genre:</strong> {{ app.user.genre }}</p>{% endif %}
                    {% if app.user.situationFamiliale %}<p class="fs-5"><strong>Situation:</strong> {{ app.user.situationFamiliale }}</p>{% endif %}
                    {% if app.user.nationalite %}<p class="fs-5"><strong>Nationalite:</strong> {{ app.user.nationalite }}</p>{% endif %}
                </div>
            </div>
            {% if app.user.bio %}
            <hr class="my-4">
            <h3 class="text-primary mb-3">Bio</h3>
            <p class="fs-5">{{ app.user.bio }}</p>
            {% endif %}
            {% if app.user.rechercheEmploi or app.user.disponiblePourMissions or app.user.pretASeFormer %}
            <hr class="my-4">
            <h3 class="text-primary mb-3">Statut</h3>
            {% if app.user.rechercheEmploi %}<span class="badge bg-warning text-dark fs-5 me-2 mb-2 p-3">En recherche d emploi</span>{% endif %}
            {% if app.user.disponiblePourMissions %}<span class="badge bg-success fs-5 me-2 mb-2 p-3">Disponible pour missions</span>{% endif %}
            {% if app.user.pretASeFormer %}<span class="badge bg-secondary fs-5 me-2 mb-2 p-3">Pret a se former</span>{% endif %}
            {% endif %}
            {% if app.user.talentCache %}
            <hr class="my-4">
            <div class="alert alert-info p-4"><h4>Talent cache</h4><p class="fs-5 mb-0">{{ app.user.talentCache }}</p></div>
            {% endif %}
            {% if app.user.ceQueVousAimezFaire %}
            <hr class="my-4">
            <h3 class="text-primary mb-3">Ce que j aime faire</h3>
            <p class="fs-5">{{ app.user.ceQueVousAimezFaire }}</p>
            {% endif %}
            {% if app.user.objectifsProfessionnels %}
            <hr class="my-4">
            <h3 class="text-primary mb-3">Objectifs</h3>
            <p class="fs-5">{{ app.user.objectifsProfessionnels }}</p>
            {% endif %}
            <hr class="my-4">
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg me-3">Deconnexion</a>
            <a href="{{ path('app_projects') }}" class="btn btn-primary btn-lg me-3">Explorer les projets</a>
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg">Accueil</a>
        </div>
    </div>
</div>
{% endblock %}
