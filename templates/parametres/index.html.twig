{% extends 'layout/app_layout.html.twig' %}

{% block page_title %}
    Paramètres
{% endblock %}

{% block page_subtitle %}
    Gérez votre profil, sécurité, accessibilité et préférences IA
{% endblock %}

{% block page_actions %}
    <button class="btn btn-primary">Enregistrer</button>
{% endblock %}

{% block page_content %}

<div class="settings-layout">

    <aside class="settings-menu" aria-label="Menu des paramètres">
        <a href="#profil">Profil</a>
        <a href="#securite">Sécurité</a>
        <a href="#accessibilite">Accessibilité</a>
        <a href="#ia">Préférences IA</a>
    </aside>

    <section class="settings-content">

        <div id="profil" class="settings-section">
            <h2>Profil</h2>

            <label for="name">Nom</label>
            <input id="name" type="text" value="Baudouin">

            <label for="email">Email</label>
            <input id="email" type="email" value="baudouin@example.com">
        </div>

        <div id="securite" class="settings-section">
            <h2>Sécurité</h2>

            <label>Mot de passe</label>
            <button class="btn-outline">Modifier le mot de passe</button>

            <label>Double authentification</label>
            <button class="btn-outline">Activer</button>
        </div>

        <div id="accessibilite" class="settings-section">
            <h2>Accessibilité</h2>

            <label><input type="checkbox"> Mode contraste élevé</label><br>
            <label><input type="checkbox"> Police adaptée (dyslexie)</label><br>
            <label><input type="checkbox"> Lecture vocale activée</label><br>
            <label><input type="checkbox"> Interface simplifiée</label>
        </div>

        <div id="ia" class="settings-section">
            <h2>Préférences IA</h2>

            <label><input type="checkbox" checked> Résumés automatiques</label><br>
            <label><input type="checkbox" checked> Suggestions IA dans les pages</label><br>
            <label><input type="checkbox"> Traduction automatique</label><br>
            <label><input type="checkbox"> Analyse prédictive</label>
        </div>

    </section>

</div>

{% endblock %}
