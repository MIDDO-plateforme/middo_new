{% extends 'base.html.twig' %}

{% block body %}
<h1>Create Transaction</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Type</label>
        <select name="type" class="form-control" required>
            <option value="deposit">Deposit</option>
            <option value="release">Release</option>
            <option value="withdrawal">Withdrawal</option>
            <option value="dispute">Dispute</option>
            <option value="refund">Refund</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Amount (â‚¬)</label>
        <input name="amount" type="number" step="0.01" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Contract (optional)</label>
        <select name="contract_id" class="form-control">
            <option value="">None</option>
            {% for c in contracts %}
                <option value="{{ c.id }}">Contract #{{ c.id }} - {{ c.title }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control"></textarea>
    </div>

    <button class="btn btn-success">Save</button>
</form>

<a href="{{ path('transaction_index') }}" class="btn btn-secondary mt-3">Back</a>
{% endblock %}
