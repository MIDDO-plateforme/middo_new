{% extends 'base.html.twig' %}

{% block body %}
<h1>Transactions for Contract: {{ contract.title }}</h1>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {% for t in transactions %}
            <tr>
                <td>{{ t.date|date('d/m/Y H:i') }}</td>
                <td>{{ t.type }}</td>
                <td>{{ t.amount }} â‚¬</td>
                <td>{{ t.description }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('contract_show', {id: contract.id}) }}" class="btn btn-secondary mt-3">Back</a>
{% endblock %}
