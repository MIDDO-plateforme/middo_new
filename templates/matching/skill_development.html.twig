{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/matching-responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/matching-animations.css') }}">
<script src="{{ asset('assets/js/middo-cache.js') }}" defer></script>
<script src="{{ asset('assets/js/favorites.js') }}" defer></script>
{% endblock %}

{% block title %}Skill Development - MIDDO{% endblock %}

{% block body %}
<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 40px 20px;">
    <h1 style="text-align: center; color: #2c3e50; margin-bottom: 30px;">üìö Skill Development Path</h1>
    
    <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-bottom: 30px;">
        <form id="skillDevForm">
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #34495e;">Current Skills</label>
                <input type="text" id="currentSkills" placeholder="PHP, Symfony..." 
                       style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 16px;">
            </div>
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #34495e;">Target Role</label>
                <input type="text" id="targetRole" placeholder="Full Stack Developer, DevOps Engineer..." 
                       style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 16px;">
            </div>
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #34495e;">Industry Standards (optional)</label>
                <input type="text" id="industryStandards" placeholder="React, Node.js, Kubernetes..." 
                       style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 16px;">
            </div>
            
            <button type="submit" style="width: 100%; padding: 15px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-size: 18px; font-weight: 600; cursor: pointer; transition: transform 0.2s;">
                üìä Analyze Skills
            </button>
        </form>
    </div>
    
    <div id="loading" style="display:none; text-align: center; padding: 40px;">
        <div style="display: inline-block; width: 50px; height: 50px; border: 5px solid #f3f3f3; border-top: 5px solid #667eea; border-radius: 50%; animation: spin 1s linear infinite;"></div>
        <p style="margin-top: 20px; color: #7f8c8d; font-size: 18px;">ü§ñ Analyzing your learning path with AI...</p>
    </div>
    
    <div id="results"></div>
</div>

<style>
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
button:hover {
    transform: translateY(-2px);
}

.favorite-btn {
    background: none;
    border: none;
    font-size: 28px;
    cursor: pointer;
    transition: transform 0.3s ease;
    padding: 5px 10px;
    margin-left: 10px;
}

.favorite-btn:hover {
    transform: scale(1.2) rotate(15deg);
}

.favorite-btn.active {
    filter: brightness(1.5);
    animation: starPop 0.3s ease;
}

@keyframes starPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3) rotate(180deg); }
    100% { transform: scale(1) rotate(360deg); }
}
</style>

<script>
document.getElementById('skillDevForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    document.getElementById('loading').style.display = 'block';
    document.getElementById('results').innerHTML = '';
    
    const current = document.getElementById('currentSkills').value.split(',').map(s => s.trim()).filter(s => s);
    const target = document.getElementById('targetRole').value.trim();
    const standards = document.getElementById('industryStandards').value.split(',').map(s => s.trim()).filter(s => s);
    
    if (current.length === 0 || !target) {
        alert('Please fill in current skills and target role!');
        document.getElementById('loading').style.display = 'none';
        return;
    }
    
    try {
        const response = await fetch('/api/matching/skills', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                userId: 1,
                currentSkills: current,
                targetRole: target,
                industryStandards: standards
            })
        });
        
        const data = await response.json();
        document.getElementById('loading').style.display = 'none';
        
        if (data.success && data.analysis) {
            displayAnalysis(data.analysis);
        } else {
            document.getElementById('results').innerHTML = '<p style="color: red; text-align: center;">‚ùå Error analyzing skills. Please try again.</p>';
        }
    } catch (error) {
        console.error('Error:', error);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('results').innerHTML = '<p style="color: red; text-align: center;">‚ùå Network error. Please check your connection.</p>';
    }
});

function displayAnalysis(analysis) {
    const resultsDiv = document.getElementById('results');
    const skillsId = `skills_${Date.now()}`;
    
    const coverageColor = analysis.coverage >= 70 ? '#27ae60' : 
                          analysis.coverage >= 50 ? '#f39c12' : '#e74c3c';
    
    let html = '<div style="margin-top: 30px;">';
    html += '<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">';
    html += '<h2 style="margin: 0; color: #2c3e50;">üéì Your Learning Path</h2>';
    html += `<button class="favorite-btn" onclick="toggleFavorite('skills', '${skillsId}', 'Learning Path: ${analysis.target_role}', ${analysis.coverage || 0})" title="Ajouter aux favoris">‚≠ê</button>`;
    html += '</div>';
    html += '<p style="text-align: center; color: #7f8c8d; margin-bottom: 30px;">Powered by OpenAI GPT-4o-mini</p>';
    
    html += '<div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">';
    
    // Target Role & Coverage
    html += `<div style="text-align: center; margin-bottom: 30px;">
        <h3 style="color: #2c3e50; margin-bottom: 10px;">üéØ Target Role: ${analysis.target_role}</h3>
        <div style="font-size: 48px; font-weight: bold; color: ${coverageColor};">Coverage: ${analysis.coverage || 0}%</div>
    </div>`;
    
    // Current Skills
    if (analysis.current_skills && analysis.current_skills.length > 0) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #3498db; margin-bottom: 10px;">‚úÖ Current Skills</h3>';
        html += '<p>' + analysis.current_skills.join(', ') + '</p>';
        html += '</div>';
    }
    
    // Skills to Learn
    if (analysis.skills_to_learn && analysis.skills_to_learn.length > 0) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #e74c3c; margin-bottom: 10px;">üìö Skills to Learn</h3>';
        html += '<p>' + analysis.skills_to_learn.join(', ') + '</p>';
        html += '</div>';
    }
    
    // Learning Roadmap
    if (analysis.learning_roadmap && analysis.learning_roadmap.length > 0) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #27ae60; margin-bottom: 10px;">üó∫Ô∏è Learning Roadmap</h3>';
        analysis.learning_roadmap.forEach((skill, index) => {
            const priorityColor = skill.priority === 'high' ? '#e74c3c' : 
                                  skill.priority === 'medium' ? '#f39c12' : '#3498db';
            html += `<div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 10px; border-left: 4px solid ${priorityColor};">`;
            html += `<h4 style="margin: 0 0 5px 0; color: #2c3e50;">${index + 1}. ${skill.skill}</h4>`;
            html += `<p style="margin: 0; font-size: 14px; color: #7f8c8d;"><span style="background: ${priorityColor}; color: white; padding: 2px 8px; border-radius: 4px; font-weight: 600; text-transform: uppercase;">${skill.priority} Priority</span> ${skill.reason || ''}</p>`;
            if (skill.estimated_time) {
                html += `<p style="margin: 5px 0 0 0; font-size: 14px; color: #7f8c8d;">‚è∞ Estimated time: ${skill.estimated_time}</p>`;
            }
            html += '</div>';
        });
        html += '</div>';
    }
    
    html += '</div></div>';
    resultsDiv.innerHTML = html;
}

function toggleFavorite(type, id, name, score) {
    const button = event.target;
    
    if (!window.FavoritesManager) {
        alert('‚ùå Le syst√®me de favoris n\'est pas charg√©. Rechargez la page.');
        return;
    }
    
    if (window.FavoritesManager.isFavorite(type, id)) {
        window.FavoritesManager.removeFavorite(type, id);
        button.classList.remove('active');
    } else {
        window.FavoritesManager.addFavorite(type, id, {
            name: name,
            score: score,
            type: 'skills'
        });
        button.classList.add('active');
    }
}
</script>
{% endblock %}