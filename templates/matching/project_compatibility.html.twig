{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/matching-responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/matching-animations.css') }}">
<script src="{{ asset('assets/js/middo-cache.js') }}" defer></script>
<script src="{{ asset('assets/js/favorites.js') }}" defer></script>
{% endblock %}

{% block title %}Project Compatibility - MIDDO{% endblock %}

{% block body %}
<div class="container" style="max-width: 1200px; margin: 0 auto; padding: 40px 20px;">
    <h1 style="text-align: center; color: #2c3e50; margin-bottom: 30px;">üîç Check Project Compatibility</h1>
    
    <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-bottom: 30px;">
        <form id="compatibilityForm">
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #34495e;">Your Skills</label>
                <input type="text" id="userSkills" placeholder="PHP, Symfony, Docker..." 
                       style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 16px;">
            </div>
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #34495e;">Project Requirements</label>
                <input type="text" id="projectRequirements" placeholder="PHP, Symfony, React, TypeScript..." 
                       style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 16px;">
            </div>
            
            <button type="submit" style="width: 100%; padding: 15px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-size: 18px; font-weight: 600; cursor: pointer; transition: transform 0.2s;">
                üîç Check Compatibility
            </button>
        </form>
    </div>
    
    <div id="loading" style="display:none; text-align: center; padding: 40px;">
        <div style="display: inline-block; width: 50px; height: 50px; border: 5px solid #f3f3f3; border-top: 5px solid #667eea; border-radius: 50%; animation: spin 1s linear infinite;"></div>
        <p style="margin-top: 20px; color: #7f8c8d; font-size: 18px;">ü§ñ Analyzing compatibility with AI...</p>
    </div>
    
    <div id="results"></div>
</div>

<style>
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
button:hover {
    transform: translateY(-2px);
}

.favorite-btn {
    background: none;
    border: none;
    font-size: 28px;
    cursor: pointer;
    transition: transform 0.3s ease;
    padding: 5px 10px;
    margin-left: 10px;
}

.favorite-btn:hover {
    transform: scale(1.2) rotate(15deg);
}

.favorite-btn.active {
    filter: brightness(1.5);
    animation: starPop 0.3s ease;
}

@keyframes starPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3) rotate(180deg); }
    100% { transform: scale(1) rotate(360deg); }
}
</style>

<script>
document.getElementById('compatibilityForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    document.getElementById('loading').style.display = 'block';
    document.getElementById('results').innerHTML = '';
    
    const skills = document.getElementById('userSkills').value.split(',').map(s => s.trim()).filter(s => s);
    const requirements = document.getElementById('projectRequirements').value.split(',').map(s => s.trim()).filter(s => s);
    
    if (skills.length === 0 || requirements.length === 0) {
        alert('Please fill in both fields!');
        document.getElementById('loading').style.display = 'none';
        return;
    }
    
    try {
        const response = await fetch('/api/matching/compatibility', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                userId: 1,
                userSkills: skills,
                projectRequirements: requirements
            })
        });
        
        const data = await response.json();
        document.getElementById('loading').style.display = 'none';
        
        if (data.success && data.analysis) {
            displayAnalysis(data.analysis);
        } else {
            document.getElementById('results').innerHTML = '<p style="color: red; text-align: center;">‚ùå Error analyzing compatibility. Please try again.</p>';
        }
    } catch (error) {
        console.error('Error:', error);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('results').innerHTML = '<p style="color: red; text-align: center;">‚ùå Network error. Please check your connection.</p>';
    }
});

function displayAnalysis(analysis) {
    const resultsDiv = document.getElementById('results');
    const compatibilityId = `compat_${Date.now()}`;
    
    const scoreColor = analysis.compatibility_score >= 80 ? '#27ae60' : 
                       analysis.compatibility_score >= 60 ? '#f39c12' : '#e74c3c';
    
    let html = '<div style="margin-top: 30px;">';
    html += '<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">';
    html += '<h2 style="margin: 0; color: #2c3e50;">üéØ Compatibility Analysis</h2>';
    html += `<button class="favorite-btn" onclick="toggleFavorite('analysis', '${compatibilityId}', 'Project Analysis', ${analysis.compatibility_score})" title="Ajouter aux favoris">‚≠ê</button>`;
    html += '</div>';
    html += '<p style="text-align: center; color: #7f8c8d; margin-bottom: 30px;">Powered by OpenAI GPT-4o-mini</p>';
    
    html += '<div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">';
    
    // Score
    html += `<div style="text-align: center; margin-bottom: 30px;">
        <div style="font-size: 72px; font-weight: bold; color: ${scoreColor};">${analysis.compatibility_score}%</div>
    </div>`;
    
    // Matching Skills
    if (analysis.matching_skills && analysis.matching_skills.length > 0) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #27ae60; margin-bottom: 10px;">‚úÖ Matching Skills</h3>';
        html += '<p>' + analysis.matching_skills.join(', ') + '</p>';
        html += '</div>';
    }
    
    // Skills to Learn
    if (analysis.skills_to_learn && analysis.skills_to_learn.length > 0) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #e74c3c; margin-bottom: 10px;">üìö Skills to Learn</h3>';
        html += '<p>' + analysis.skills_to_learn.join(', ') + '</p>';
        html += '</div>';
    }
    
    // Strengths
    if (analysis.strengths) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #3498db; margin-bottom: 10px;">üí™ Your Strengths</h3>';
        html += '<p>' + analysis.strengths + '</p>';
        html += '</div>';
    }
    
    // Challenges
    if (analysis.challenges) {
        html += '<div style="margin-bottom: 20px;">';
        html += '<h3 style="color: #f39c12; margin-bottom: 10px;">‚ö†Ô∏è Challenges</h3>';
        html += '<p>' + analysis.challenges + '</p>';
        html += '</div>';
    }
    
    // Recommendation
    if (analysis.recommendation) {
        html += '<div style="background: #e8f4fd; padding: 20px; border-radius: 8px; border-left: 4px solid #3498db;">';
        html += '<h3 style="color: #2c3e50; margin-bottom: 10px;">üí° Recommendation</h3>';
        html += '<p style="margin: 0;">' + analysis.recommendation + '</p>';
        html += '</div>';
    }
    
    html += '</div></div>';
    resultsDiv.innerHTML = html;
}

function toggleFavorite(type, id, name, score) {
    const button = event.target;
    
    if (!window.FavoritesManager) {
        alert('‚ùå Le syst√®me de favoris n\'est pas charg√©. Rechargez la page.');
        return;
    }
    
    if (window.FavoritesManager.isFavorite(type, id)) {
        window.FavoritesManager.removeFavorite(type, id);
        button.classList.remove('active');
    } else {
        window.FavoritesManager.addFavorite(type, id, {
            name: name,
            score: score,
            type: 'compatibility'
        });
        button.classList.add('active');
    }
}
</script>
{% endblock %}