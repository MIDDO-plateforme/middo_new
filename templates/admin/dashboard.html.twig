<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MIDDO Dashboard - Analytics</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/js/realtime-client.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            background: white;
            padding: 25px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h1 {
            color: #667eea;
            font-size: 32px;
            font-weight: 700;
        }

        .status-badge {
            background: #10b981;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
        }

        .kpi-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .kpi-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .kpi-card:hover {
            transform: translateY(-5px);
        }

        .kpi-title {
            color: #6b7280;
            font-size: 14px;
            margin-bottom: 10px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .kpi-value {
            font-size: 36px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 5px;
        }

        .kpi-subtitle {
            font-size: 14px;
            color: #9ca3af;
        }

        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .chart-title {
            font-size: 18px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 20px;
        }

        .activity-feed {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .activity-item {
            padding: 15px;
            border-left: 3px solid #667eea;
            margin-bottom: 15px;
            background: #f9fafb;
            border-radius: 8px;
        }

        .activity-title {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 5px;
        }

        .activity-time {
            font-size: 12px;
            color: #9ca3af;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: white;
            font-size: 18px;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .loading {
            animation: pulse 1.5s ease-in-out infinite;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div>
                <h1>üìä MIDDO Dashboard</h1>
                <p style="color: #6b7280; margin-top: 5px;">SESSION 24 - Analytics en temps r√©el</p>
            </div>
            <div class="status-badge" id="statusBadge">‚óè Op√©rationnel</div>
        </header>

        <div class="loading" id="loading">Chargement des donn√©es...</div>

        <div id="dashboard" style="display: none;">
            <!-- KPI Cards -->
            <div class="kpi-grid">
                <div class="kpi-card">
                    <div class="kpi-title">Total Utilisateurs</div>
                    <div class="kpi-value" id="kpiUsers">-</div>
                    <div class="kpi-subtitle">Membres actifs</div>
                </div>

                <div class="kpi-card">
                    <div class="kpi-title">Notifications</div>
                    <div class="kpi-value" id="kpiNotifications">-</div>
                    <div class="kpi-subtitle"><span id="kpiNotificationsUnread">-</span> non lues</div>
                </div>

                <div class="kpi-card">
                    <div class="kpi-title">T√¢ches</div>
                    <div class="kpi-value" id="kpiTasks">-</div>
                    <div class="kpi-subtitle"><span id="kpiTasksCompleted">-</span>% termin√©es</div>
                </div>

                <div class="kpi-card">
                    <div class="kpi-title">Engagement</div>
                    <div class="kpi-value" id="kpiEngagement">-</div>
                    <div class="kpi-subtitle">Taux de lecture</div>
                </div>
            </div>

            <!-- Charts -->
            <div class="charts-grid">
                <div class="chart-card">
                    <div class="chart-title">üìà T√¢ches par Statut</div>
                    <canvas id="chartTasksByStatus"></canvas>
                </div>

                <div class="chart-card">
                    <div class="chart-title">üîî Notifications (Lues vs Non lues)</div>
                    <canvas id="chartNotifications"></canvas>
                </div>

                <div class="chart-card">
                    <div class="chart-title">‚ö° Priorit√© des T√¢ches</div>
                    <canvas id="chartTasksPriority"></canvas>
                </div>
            </div>

            <!-- Activity Feed -->
            <div class="activity-feed">
                <div class="chart-title">üïê Activit√© R√©cente</div>
                <div id="activityFeed">
                    <p style="color: #9ca3af;">Aucune activit√© r√©cente</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Configuration
        const API_BASE = '';
        let charts = {};

        // Fonction principale
        async function loadDashboard() {
            try {
                // Charger toutes les donn√©es en parall√®le
                const [statsData, kpiData, tasksStatsData, activityData] = await Promise.all([
                    fetch(`${API_BASE}/api/dashboard/stats`).then(r => r.json()),
                    fetch(`${API_BASE}/api/dashboard/kpi`).then(r => r.json()),
                    fetch(`${API_BASE}/api/tasks/stats/summary`).then(r => r.json()),
                    fetch(`${API_BASE}/api/dashboard/activity?limit=5`).then(r => r.json())
                ]);

                // Afficher les KPI
                updateKPIs(statsData, kpiData, tasksStatsData);

                // Cr√©er les graphiques
                createCharts(statsData, tasksStatsData);

                // Afficher l'activit√©
                updateActivity(activityData);

                // Masquer le loading
                document.getElementById('loading').style.display = 'none';
                document.getElementById('dashboard').style.display = 'block';

                console.log('[MIDDO Dashboard] Donn√©es charg√©es avec succ√®s');
            } catch (error) {
                console.error('[MIDDO Dashboard] Erreur:', error);
                document.getElementById('loading').innerHTML = '‚ùå Erreur de chargement';
            }
        }

        // Mise √† jour des KPI
        function updateKPIs(stats, kpi, tasksStats) {
            document.getElementById('kpiUsers').textContent = stats.data.users.total;
            document.getElementById('kpiNotifications').textContent = stats.data.notifications.total;
            document.getElementById('kpiNotificationsUnread').textContent = stats.data.notifications.unread;
            
            if (tasksStats.success) {
                document.getElementById('kpiTasks').textContent = tasksStats.data.summary.total;
                document.getElementById('kpiTasksCompleted').textContent = tasksStats.data.summary.completion_rate;
            }

            document.getElementById('kpiEngagement').textContent = kpi.data.notifications.read_rate_percentage + '%';
        }

        // Cr√©ation des graphiques
        function createCharts(stats, tasksStats) {
            // Chart 1: T√¢ches par statut
            if (tasksStats.success) {
                const ctx1 = document.getElementById('chartTasksByStatus').getContext('2d');
                charts.tasksByStatus = new Chart(ctx1, {
                    type: 'bar',
                    data: {
                        labels: ['En attente', 'En cours', 'Termin√©es'],
                        datasets: [{
                            label: 'T√¢ches',
                            data: [
                                tasksStats.data.by_status.pending || 0,
                                tasksStats.data.by_status.in_progress || 0,
                                tasksStats.data.by_status.completed || 0
                            ],
                            backgroundColor: ['#f59e0b', '#3b82f6', '#10b981'],
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            }

            // Chart 2: Notifications
            const ctx2 = document.getElementById('chartNotifications').getContext('2d');
            charts.notifications = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Lues', 'Non lues'],
                    datasets: [{
                        data: [
                            stats.data.notifications.read,
                            stats.data.notifications.unread
                        ],
                        backgroundColor: ['#10b981', '#ef4444'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true
                }
            });

            // Chart 3: Priorit√© des t√¢ches
            if (tasksStats.success) {
                const ctx3 = document.getElementById('chartTasksPriority').getContext('2d');
                charts.tasksPriority = new Chart(ctx3, {
                    type: 'pie',
                    data: {
                        labels: ['Faible', 'Moyenne', 'Haute', 'Urgente'],
                        datasets: [{
                            data: [
                                tasksStats.data.by_priority.low || 0,
                                tasksStats.data.by_priority.medium || 0,
                                tasksStats.data.by_priority.high || 0,
                                tasksStats.data.by_priority.urgent || 0
                            ],
                            backgroundColor: ['#94a3b8', '#3b82f6', '#f59e0b', '#ef4444'],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true
                    }
                });
            }
        }

        // Mise √† jour de l'activit√©
        function updateActivity(activityData) {
            const feed = document.getElementById('activityFeed');
            
            if (activityData.success && activityData.data.activities.length > 0) {
                feed.innerHTML = activityData.data.activities.map(activity => `
                    <div class="activity-item">
                        <div class="activity-title">${activity.title}</div>
                        <div>${activity.message}</div>
                        <div class="activity-time">${activity.created_at}</div>
                    </div>
                `).join('');
            }
        }

        // Connexion temps r√©el
        const realtime = new MIDDORealtimeClient(1);
        realtime.onNotification((notification) => {
            console.log('[Dashboard] Nouvelle notification temps r√©el:', notification);
            // Recharger les KPI quand une nouvelle notification arrive
            setTimeout(() => loadDashboard(), 500);
        });
        realtime.connect();

        // Charger au d√©marrage
        loadDashboard();

        // Rafra√Æchir toutes les 30 secondes
        setInterval(loadDashboard, 30000);
    </script>
</body>
</html>
